	INTEGER*4  FCBLEN
	PARAMETER (FCBLEN=50)  !LENGTH OF AN FCBTAB ENTRY
C
C
	INTEGER*4  FCBLUN, FCBBLK, FCBOFF
	PARAMETER (FCBLUN=1)  !LOGICAL UNIT #
	PARAMETER (FCBBLK=2)  !ACTUAL BLOCK #
	PARAMETER (FCBOFF=3)  !RECORD IN BLOCK
C
	INTEGER*4  FCBMOD, DIRMOD, SEQRED, SEQWRI
	PARAMETER (FCBMOD=4)  !MODE
	   PARAMETER (DIRMOD = 1) !DIRECT MODE
	   PARAMETER (SEQRED = 2) !SEQUENTIAL READ
	   PARAMETER (SEQWRI = 3) !SEQUENTIAL WRITE
C
	INTEGER*4  FCBHSH, FCBLN4, FCBLN2, FCBI4K, FCBI2K, FCBI2H
	PARAMETER (FCBHSH=5)  !# OF BUCKETS IN THE FILE
	PARAMETER (FCBLN4=6)  !I*4 RECORD LENGTH
	PARAMETER (FCBLN2=7)  !I*2 RECORD LENGTH
	PARAMETER (FCBI4K=8)  !I*4 OFFSET OF I*4 KEY
	PARAMETER (FCBI2K=9)  !I*4 OFFSET OF I*2 KEY
	PARAMETER (FCBI2H=10) !    WHICH HALF OF WORD (1,2)
C
	INTEGER*4  FCBFDB
	PARAMETER (FCBFDB=11) !FDB BLOCK (7 FULL WORDS)
C
	  INTEGER*4  FCBFDBCMD, FCBFDBBEG, FCBFDBEND, FCBFDBREC
	  PARAMETER (FCBFDBCMD=11)   !FUNCTION,LUN,STATUS1,STATUS2
	  PARAMETER (FCBFDBBEG=12)   !BEGINNING BUFFER ADDRESS
	  PARAMETER (FCBFDBEND=13)   !   ENDING BUFFER ADDRESS
	  PARAMETER (FCBFDBREC=14)   !RECORD NUMBER
C
	  INTEGER*4  FCBFDBLEN, FCBFDBOPT, FCBFDBSEC
	  PARAMETER (FCBFDBLEN=15)   !LENGTH OF TRANSFER (BYTES)
	  PARAMETER (FCBFDBOPT=16)   !EXTENDED OPTIONS
	  PARAMETER (FCBFDBSEC=17)   !NUMBER OF SECTORS PER RECORD
C
	INTEGER*4  FCBLK4, FCBLK2, FCBLLN
	PARAMETER (FCBLK4=18) !FOR RANDOM ACCESS, LAST I*4 KEY READ
	PARAMETER (FCBLK2=19) !FOR RANDOM ACCESS, LAST I*2 KEY READ
	PARAMETER (FCBLLN=20) !FOR RANDOM ACCESS, LENGTH OF LAST RECORD
C
	INTEGER*4  FCBMAX, FCBLOF, FCBBIG, FCBMSZ, FCBDUP, FCBCHG
	PARAMETER (FCBMAX=21) !MAX # OF RECORDS THAT WILL FIT
C                           ; (always leaves room for 4 at the end)
	PARAMETER (FCBLOF=22) !LAST OFFSET AT WHICH RECORD CAN BEGIN
C                           ; (relative to 0)
	PARAMETER (FCBBIG=23) !I*4 SIZE OF BIG BUFFER (IF ANY)
	PARAMETER (FCBMSZ=24) !MAXIMUM SIZE OF A RECORD (4* LENGTH)
	PARAMETER (FCBDUP=25) !0=CHECK FOR DUP KEY, 1= DO NOT CHECK
	PARAMETER (FCBCHG=26) !SET TO 1 WHEN BLOCK CHANGED
C
C     THE FOLLOWING 4 ITEMS MUST BE CONTIGUOUS
C
	INTEGER*4  FCBSZ1, FCBSZ2, FCBSZ3, FCBSZ4
	PARAMETER (FCBSZ1=27) !SIZE OF 1 RECORD
	PARAMETER (FCBSZ2=28) !SIZE OF 2 RECORDS
	PARAMETER (FCBSZ3=29) !SIZE OF 3 RECORDS
	PARAMETER (FCBSZ4=30) !SIZE OF 4 RECORDS
C
C     THE FOLLOWING ARE USED FOR TUB I/O (I.E., MULTIPLE BUCKETS)
C
	INTEGER*4  FCBTUBSIZ, FCBTUBBLK, FCBTUBOFF
	PARAMETER (FCBTUBSIZ=31)   !NUMBER OF BUCKETS IN A TUB
	PARAMETER (FCBTUBBLK=32)   !CURRENT TUB NUMBER
	PARAMETER (FCBTUBOFF=33)   !BEGINNING OFFSET OF A BUCKET IN TUB
C                                ;(relative to 0)
C
	INTEGER*4  FCBTUBCHG, FCBTUBLST
	PARAMETER (FCBTUBCHG=34)   !SET TO 1 WHEN TUB CHANGED
	PARAMETER (FCBTUBLST=35)   !LAST TUB NUMBER
C
C
C The following are for statistics gathering
C
	INTEGER*4  FCBHIT, FCBMIS, FCBOVR, FCBTOV, FCBUSD
	PARAMETER (FCBHIT=46) !# OF RECORDS FOUND
	PARAMETER (FCBMIS=47) !# OF RECORDS NOT FOUND
	PARAMETER (FCBOVR=48) !# OF RECORDS THAT OVERLAID
	PARAMETER (FCBTOV=49) !# OF EXTRA READS TO EXECUTE FOR OVERLAYS
	PARAMETER (FCBUSD=50) !# OF BASIC RECORDS AREA USED
C
C
C
C
C     DEFINITION OF OFFSETS FOR DOUBLE LEVEL BUFFERING FOR SEQ. WRITE
C
C These are offsets into BIGBUF
C
	INTEGER*4  BUFFRE, BUFRSZ, BUFBKS, BUFLUN
	PARAMETER (BUFFRE=1) !1-ST FREE OFFSET
	PARAMETER (BUFRSZ=2) !RECORD SIZE
	PARAMETER (BUFBKS=3) !NR OF BLOCKS BUFFERRED
	PARAMETER (BUFLUN=4) !LUN ASSIGNED TO BUFFER
C
	INTEGER*4  BUFCNT
	PARAMETER (BUFCNT=4) !LENGTH OF CONTROL AREA
C
C The following defines the mask to use to clear the high order
C 2 bits of the I*4 key in a record.
C
	INTEGER*4  INDMSK
	PARAMETER (INDMSK='3FFFFFFF'X)
C
C
	INTEGER*4      FCB(FCBLEN,MAXLUN)  !FILE CONTROL BLOCKS
C
C The following defines the internal buffer used by HSHRND routines.
C Also, MYLUN contains the LUN that last accessed the buffer, and
C       MYBLK contains the block # of the buffer.
C
	INTEGER*4      MYBUFI4(I4BUCSIZ)
	INTEGER*2      MYBUFI2(I2BUCSIZ)
	EQUIVALENCE    (MYBUFI4,MYBUFI2)
C
	INTEGER*4      MYBLK, MYLUN
C
C
	COMMON         /HSHCOM/FCB,MYLUN,MYBLK,MYBUFI4
C
C
