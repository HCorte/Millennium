C
C RECORD LAYOUT FOR THE SYSTEM STATISTICS FILE
C FOR DETAILS ON SIZES AND OFFSETS: STACOM.DEF
C 
C OSTFLTO(NUMTOT,2,MAXBRD,MAXBRD+1,NUMLTO)	LOTTO STATISTICS
C OSTFGAM(NUMTOT,4,OMAXGAM)			GAME STATISTICS
C OSTFKIK(2,OMAXGAM)				KICKER GAME STATISTICS
C OSTFSPT(NUMTOT,2,MAXBRD,MAXBRD+1,NUMSPT)	SPORTS STATISTICS
C OSTFSPT_CUP(NUMSPT)				SPORTS COUPONS PLAYED 
C OSTFSPT_TAB1(SPGNBR,7,NUMSPT)			SPORTS STATS TABLE 1  
C OSTFSPT_TAB2(SPGNBR,3,NUMSPT)			SPORTS STATS TABLE 2  
C OSTFTSL(NUMTOT,5,NUMTSL)			TOTO SELECT STATISTICS
C
        INTEGER*4 OMAXGAM
        PARAMETER(OMAXGAM=10)

        INTEGER*4  OSTFLTO_OFF, OSTFGAM_OFF, OSTFKIK_OFF, OSTFSPT_OFF
        PARAMETER (OSTFLTO_OFF=1)
        PARAMETER (OSTFGAM_OFF=OSTFLTO_OFF+NUMTOT*2*MAXBRD*(MAXBRD+1)*
     *             NUMLTO)
        PARAMETER (OSTFKIK_OFF=OSTFGAM_OFF+NUMTOT*4*OMAXGAM)
        PARAMETER (OSTFSPT_OFF=OSTFKIK_OFF+2*OMAXGAM)

        INTEGER*4  OSTFSPT_CUP_OFF, OSTFSPT_TAB1_OFF, OSTFSPT_TAB2_OFF
        PARAMETER (OSTFSPT_CUP_OFF = OSTFSPT_OFF+NUMTOT*2*MAXBRD*
     *             (MAXBRD+1)*NUMSPT)
        PARAMETER (OSTFSPT_TAB1_OFF=OSTFSPT_CUP_OFF+NUMSPT)
        PARAMETER (OSTFSPT_TAB2_OFF=OSTFSPT_TAB1_OFF+SPGNBR*7*NUMSPT)

        INTEGER*4  OSTFTSL_OFF, OSTFFRE_OFF
        PARAMETER (OSTFTSL_OFF=OSTFSPT_TAB2_OFF+SPGNBR*3*NUMSPT)
        PARAMETER (OSTFFRE_OFF=OSTFTSL_OFF+NUMTOT*5*NUMTSL)

        INTEGER*4  OSTFSEC_VAX, OSTFSEC_NUM
        PARAMETER (OSTFSEC_VAX=SECSIZE/4)
        PARAMETER (OSTFSEC_NUM=NINT(FLOAT((OSTFFRE_OFF-2)/
     *                                   OSTFSEC_VAX)+.5))

        INTEGER*4  OSTFLEN                       !STATICS RECORD SIZE
        INTEGER*4  OSTFSEC                       !NUMBER OF SEC IN RECORD
        PARAMETER  (OSTFLEN = OSTFSEC_VAX*OSTFSEC_NUM) !EVEN SECTOR SIZE
        PARAMETER  (OSTFSEC = OSTFLEN/64)

        INTEGER*4  OSTFREC(OSTFLEN)

        INTEGER*4  OSTFLTO(NUMTOT,2,MAXBRD,MAXBRD+1,NUMLTO)
        INTEGER*4  OSTFGAM(NUMTOT,4,OMAXGAM)
        INTEGER*4  OSTFKIK(2,OMAXGAM)
        INTEGER*4  OSTFSPT(NUMTOT,2,MAXBRD,MAXBRD+1,NUMSPT)
        INTEGER*4  OSTFSPT_CUP(NUMSPT)
        INTEGER*4  OSTFSPT_TAB1(SPGNBR,7,NUMSPT)
        INTEGER*4  OSTFSPT_TAB2(SPGNBR,3,NUMSPT)
        INTEGER*4  OSTFTSL(NUMTOT,5,NUMTSL)

        EQUIVALENCE (OSTFLTO,      OSTFREC(OSTFLTO_OFF))
        EQUIVALENCE (OSTFGAM,      OSTFREC(OSTFGAM_OFF))
        EQUIVALENCE (OSTFKIK,      OSTFREC(OSTFKIK_OFF))
        EQUIVALENCE (OSTFSPT,      OSTFREC(OSTFSPT_OFF))
        EQUIVALENCE (OSTFSPT_CUP,  OSTFREC(OSTFSPT_OFF))
        EQUIVALENCE (OSTFSPT_TAB1, OSTFREC(OSTFSPT_TAB1_OFF))
        EQUIVALENCE (OSTFSPT_TAB2, OSTFREC(OSTFSPT_TAB2_OFF))
        EQUIVALENCE (OSTFTSL,      OSTFREC(OSTFTSL_OFF))
