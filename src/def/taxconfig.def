C
C      STRUCTURE OF TAXCONFIG FILE (TAXCONFIG.FIL)
C
        ! AM PARAMETER OFFSET CONFIGURATION
        INTEGER*4  TXCF_AMTAX_OFF, TXCF_AMBSAMNT_OFF, TXCF_AMTAXRFN_OFF
        PARAMETER (TXCF_AMTAX_OFF = 1)                        ! AM Tax
        PARAMETER (TXCF_AMBSAMNT_OFF = TXCF_AMTAX_OFF    + 1) ! AM Base Amount
        PARAMETER (TXCF_AMTAXRFN_OFF = TXCF_AMBSAMNT_OFF + 1) ! AM Tax Refund Amount
        
        ! LN PARAMETER OFFSET CONFIGURATION
        INTEGER*4  TXCF_LNTAX_OFF, TXCF_LNBSAMNT_OFF, TXCF_LNTAXRFN_OFF
        PARAMETER (TXCF_LNTAX_OFF    = TXCF_AMTAXRFN_OFF + 1) ! LN Tax Refund Amount
        PARAMETER (TXCF_LNBSAMNT_OFF = TXCF_LNTAX_OFF    + 1) ! LN Base Amount
        PARAMETER (TXCF_LNTAXRFN_OFF = TXCF_LNBSAMNT_OFF + 1) ! LN Tax Refund Amount
        
        ! NUMBER OF FIELDS
        INTEGER*4 TXCF_LEN
        PARAMETER (TXCF_LEN = TXCF_LNTAXRFN_OFF - 1)
        
        ! NUMBER OF FULL SECTORS, EACH ONE OF SIZE 128
        INTEGER*4 ITAXCF_SEC
        PARAMETER (ITAXCF_SEC = TXCF_LEN / 128 + 1)
        
        ! NUMBER OF FULL SECTORS DUPLICATED
        INTEGER*4 TXCF_SEC
        PARAMETER (TXCF_SEC = ITAXCF_SEC * 2)
        
        ! FREE SIZE CALCULATION
        INTEGER*4 TXCF_FRESIZ
        PARAMETER (TXCF_FRESIZ = TXCF_SEC * 64 - TXCF_LEN)
        
        INTEGER*4 TXCF_REC(TXCF_LEN + TXCF_FRESIZ)
        
        INTEGER*4 TXCF_AMTAX
        INTEGER*4 TXCF_AMBSAMNT
        INTEGER*4 TXCF_AMTAXRFN
        INTEGER*4 TXCF_LNTAX
        INTEGER*4 TXCF_LNBSAMNT
        INTEGER*4 TXCF_LNTAXRFN
        INTEGER*4 TXCF_FRE(TXCF_FRESIZ)
        
        EQUIVALENCE(TXCF_AMTAX,    TXCF_REC(TXCF_AMTAX_OFF))
        EQUIVALENCE(TXCF_AMBSAMNT, TXCF_REC(TXCF_AMBSAMNT_OFF))
        EQUIVALENCE(TXCF_AMTAXRFN, TXCF_REC(TXCF_AMTAXRFN_OFF))
        EQUIVALENCE(TXCF_LNTAX,    TXCF_REC(TXCF_LNTAX_OFF))
        EQUIVALENCE(TXCF_LNBSAMNT, TXCF_REC(TXCF_LNBSAMNT_OFF))
        EQUIVALENCE(TXCF_LNTAXRFN, TXCF_REC(TXCF_LNTAXRFN_OFF))
        
