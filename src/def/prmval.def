	INTEGER*4  VALLEN
	PARAMETER (VALLEN=78)
C
C VALIDATION RECORD HEADER
C
	INTEGER*4  VSTAT, VCCDC, VCSER, VCTER, VLCDC, VLTER, VLSER
	INTEGER*4 VKTAMT
	PARAMETER (VSTAT=1)    !VALIDATION STATUS
	PARAMETER (VCCDC=2)    !CASHING CDC DATE
	PARAMETER (VCSER=3)    !CASHING SERIAL NUMBER
	PARAMETER (VCTER=4)    !CASHING TERMINAL
	PARAMETER (VLCDC=5)    !CLAIM CDC DATE
	PARAMETER (VLTER=6)    !CLAIM TERMINAL
	PARAMETER (VLSER=7)    !CLAIM SERIAL NUMBER
	PARAMETER (VKTAMT=8)   !KICKER TAX AMOUNT
C
C	INTEGER*4  VPAMT, VKPAMT, VK2PAMT, VSCDC, VSSER, VSTER, VEXP  !V10 
        INTEGER*4  VPAMT, VKPAMT, VKOPSAMT, VSCDC, VSSER, VSTER, VEXP !V10
C	INTEGER*4  VKEXP, VRAMT, VTAMT, VFCOPAMT   !V10
        INTEGER*4  VKEXP, VRAMT, VTAMT, VOPSAMT    !V10
C                              
C NOTE! VPAMT,in case of VIKING Lotto has the following meaning:
C
	PARAMETER (VPAMT=9)    !PAY AMOUNT
	PARAMETER (VKPAMT=10)  !KICKER PAY AMOUNT
C	PARAMETER (VK2PAMT=11) !KICKER 2 PAY AMOUNT
        PARAMETER (VKOPSAMT=11)!AMOUNT IN OPS FOR KICKER                       
C	PARAMETER (VFCOPAMT=12)!FINNISH CONTRIBUTION PAY AMOUNT ONLY. (VIKING)
        PARAMETER (VOPSAMT=12) !AMOUNT IN OP'S FOR THE GAME                    
	PARAMETER (VRAMT=13)   !REFUND AMOUNT
	PARAMETER (VTAMT=14)   !TAX AMOUNT
	PARAMETER (VSCDC=15)   !WAGER CDC DATE
	PARAMETER (VSSER=16)   !WAGER SERIAL NUMBER
	PARAMETER (VSTER=17)   !SELLING TERMINAL
	PARAMETER (VEXP=18)    !DRAWING EXPIRED
	PARAMETER (VKEXP=19)   !KICKER EXPIRED
C
	INTEGER*4  VGAM, VGTYP, VGIND, VKGME, VWCDC
	INTEGER*4  VBNKID, VBNKNUM, VFRAC
	PARAMETER (VGAM=20)    !GAME NUMBER
	PARAMETER (VGTYP=21)   !GAME TYPE
	PARAMETER (VGIND=22)   !GAME INDEX
	PARAMETER (VKGME=23)   !KICKER GAME NUMBER
	PARAMETER (VWCDC=24)   !WINSEL CDC
	PARAMETER (VBNKID=25)  !BANK ID
	PARAMETER (VBNKNUM=26) !BANK NUMBER
	PARAMETER (VFRAC=27)   !# OF FRACTIONS THIS WINNER REPRESENTS OF MAX.
C
C	INTEGER*4  VPZOFF, VFTBSF, VFREE2, VFREE1, VFREE0, VPDATA    !V10
        INTEGER*4  VPZOFF, VOPSCNT, V5P3FLG, VFREE2, VFREE1, VPDATA  !V10
	PARAMETER (VPZOFF=28)  !PRIZE TABLE OFFSET
C	PARAMETER (VFTBSF=29)  !TELEPHONE BETTING FLAG       !V10
        PARAMETER (VOPSCNT=29) !NUMBER OF OP'S IN THE RECORD !V10
        PARAMETER (V5P3FLG=30) !FLAG OF GAMETYP+GAMEIND IS 5+3 BITS
	PARAMETER (VFREE2=31)  !AVAILABLE FOR USE - Passive USE IT
	PARAMETER (VFREE1=32)  !AVAILABLE FOR USE
	PARAMETER (VPDATA=33)  !START OF PRIZE DATA
C
C PASSIVE DECLARATION
C
        INTEGER*4  VEXTR,VTCKT,VSERN,VVALN,VPFRAC,VPRGCDC,VOFFTER,VPASTYP
        PARAMETER  (VEXTR   = 5)
        PARAMETER  (VTCKT   = 6)
        PARAMETER  (VSERN   = 7)
        PARAMETER  (VVALN   = 8)
        PARAMETER  (VPFRAC  = 19)
        PARAMETER  (VPRGCDC = 25)
        PARAMETER  (VOFFTER = 26)
        PARAMETER  (VPASTYP = 31)  
C====== VPASTYP DEFINITIONS
        INTEGER*4 VPASOFF,VPASONL
        PARAMETER (VPASOFF = 0)
        PARAMETER (VPASONL = 1)
C====== VPASTYP DEFINITIONS
C
C DETAIL PRIZE DATA
C
	INTEGER*4  VKIK, VUPD, VDRW, VDIV, VSHR, VBDR, VREF
	INTEGER*4  VKI2, VPRG, VSUB
        INTEGER*4  VOP     !V10
	PARAMETER (VKIK=1)  !KICKER FLAG			!Bit flag.
	PARAMETER (VUPD=2)  !PRIZE UPDATE FLAG			!Bit flag.
	PARAMETER (VBDR=3)  !BONUS DRAW WINN FLAG		!Bit flag.
	PARAMETER (VREF=4)  !REFUND FLAG			!Bit flag.
	PARAMETER (VDRW=5)  !DRAW NUMBER			!Byte.
	PARAMETER (VDIV=6)  !DIVISION WON			!4 bits.
	PARAMETER (VSHR=7)  !SHARES / AMT WON FOR SOME GAMES.  	!4 Bytes!
	PARAMETER (VKI2=8)  !SECOND KICKER FLAG			!Bit flag.
	PARAMETER (VPRG=9)  !PURGED FLAG			!Bit flag.
        PARAMETER (VSUB=10) !SUBGAME (BINGO)                    !2 bits
        PARAMETER (VOP=11)  !OP FLAG                            !Bit flag.     
C
C NOTE: VSUB IS USED ALSO FOR LOTTO EXTRA DRAW AND OLD KICKER :
C FOLLOWING VALUES  OF VSUB ARE USED FOR LOTTO :
C  0 - NO EXTRA DRAW WINNER
C  1 - EXTRA DRAW WINNER (BIT)
C FOLLOWING VALUE OF VSUB ARE USED FOR KICKER :
C  0 - NORMAL WINNER
C  2 - OLD KICKER WINNER (USED FOR EXCHANGE TICKET WINNERS, BIT)
C  					 --------------------------------------
C					 TOTAL (in log record): 7 Bytes / Prize.
C
C
	INTEGER*4  VMAX, VPLEN
	PARAMETER (VMAX=26)   !26 WINNERS MAXIMUM
C	PARAMETER (VPLEN=10)   !LENGTH OF DETAIL PRIZE DATA    !v10
        PARAMETER (VPLEN=11)   !LENGTH OF DETAIL PRIZE DATA    !v10
C
