	INTEGER*4  LSYSMAX, LSYS_NO, LSYS_FULL, LSYS_REDUCED
	PARAMETER (LSYSMAX=40)           !MAXIMUM NR OF SYSTEM BETS
	PARAMETER (LSYS_NO=0)            !NOT A SYSTEM BET
	PARAMETER (LSYS_FULL=1)          !FULL SYSTEM BET
	PARAMETER (LSYS_REDUCED=2)       !REDUCED SYSTEM BET
C
	INTEGER*4  LSYS_TABMAX, LSYS_MAXGAM, LMXSHR, LMXBONUS
	PARAMETER (LSYS_TABMAX=10000)    !MAXIMUM TABLE USED BY BETS
	PARAMETER (LSYS_MAXGAM=2)        !MAXIMUM # OF DIFFERENT GAMES
	PARAMETER (LMXSHR=10)            !UP TO MATCH 10 SHARE
	PARAMETER (LMXBONUS=3)           !MAXIMUM 3 BONUS NBRS
C
	INTEGER*4  LMXMARK, LMXFULLMARK, L_SYSBYTES
	PARAMETER (LMXMARK=24)           !MAX 24 MARKS IN REDUCED SYS
	PARAMETER (LMXFULLMARK=16)       !MAX # OF MARKS IN FULL SYSTEM
	PARAMETER (L_SYSBYTES=4)         !4 IF LSYS_TAB INTEGER*4
C
C     SYSTEM BETS SECTION
C
	INTEGER*4 LSYS_ATR(LSYSMAX)      !SYSTEM BETS ATRIBUTES
	INTEGER*4 LSYS_NUMBET(LSYSMAX)   !NUMBER OF CORRESPONDING BETS
	INTEGER*4 LSYS_GAME(LSYSMAX)     !CORRESPONDING GAME #
	INTEGER*4 LSYS_NUMMRK(LSYSMAX)   !NUMBER OF MARKS
	INTEGER*4 LSYS_PTR(LSYSMAX)      !POINTER TO SYSTEM DATA AREA
	INTEGER*4 LSYS_BOARD(LSYSMAX)    !CORRESPONDING SIMPLE BOARDS
	INTEGER*4 LSYS_TEST              !.NON.0 IF TEST MODE
        INTEGER*4 LSYS_FREEPTR           !DESPITE OF THE NAME, THIS POINTS TO THE
C                                        !OCCUPIED POSITION IN THE LSYS_TAB TABLE.

C
C     GAME DESCRIPTION SECTION
C
	INTEGER*4 LSYS_GAMCHOSE(LSYS_MAXGAM) !'CHOSE' N FROM
	INTEGER*4 LSYS_GAMFROM(LSYS_MAXGAM)  !CHOSE N 'FROM'
	INTEGER*4 LSYS_BONUSBET(LSYS_MAXGAM) !# OF BONUS NR BET
	INTEGER*4 LSYS_GAMDIV(0:LMXSHR,LSYS_MAXGAM)!DIVISIONS DEFINED
	INTEGER*4 LSYS_GAMBON(0:LMXSHR,LSYS_MAXGAM)!BONUS DIVISION DEF
C
	INTEGER*4  LSYS_GAMSHRBON
	PARAMETER (LSYS_GAMSHRBON=2*LMXBONUS+1) !BONUS DIM. FOR LSYS_GAM
	INTEGER*4 LSYS_GAMSHR(0:LMXSHR,0:LMXSHR,0:LSYS_GAMSHRBON,
     *	                      LMXFULLMARK,LSYS_MAXGAM)
C    *   SHARES(SHARE DIVISION,MATCH,NO_BONUS/BONUS,SYSTEM_TYPE,GAME)
C    *    SHARES(*,*,0,*,*)   - NO BONUS PRIZES, NO BONUS MATCHED
C    *    SHARES(*,*,1,*,*)   - BONUS PRIZES, NO BONUS MATCHED
C    *    SHARES(*,*,2,*,*)   - NO BONUS PRIZES, BONUS MATCHED
C    *    SHARES(*,*,3,*,*)   - BONUS PRIZES, BONUS MATCHED
C    *    SHARES(*,*,4,*,*)   - NO BONUS PRIZE, 2 BONUSES MATCHED
C    *    SHARES(*,*,5,*,*)   - BONUS PRIZES, 2 BONUSES MATCHED
C         ...
C
C
	INTEGER*4 LSYS_TAB(LSYS_TABMAX)  !SYSTEMS DESCRIPTION TABLE
C
      COMMON /LSYSCOM/ LSYS_ATR,LSYS_NUMBET,LSYS_GAMCHOSE,LSYS_GAMFROM
     *	                ,LSYS_PTR,LSYS_TEST,LSYS_FREEPTR,LSYS_GAME
     *	                ,LSYS_NUMMRK,LSYS_BONUSBET
     *	                ,LSYS_GAMDIV,LSYS_GAMBON
     *	                ,LSYS_GAMSHR,LSYS_TAB,LSYS_BOARD
C
C     SYSTEM DESCRIPTION TABLE CONTAINS DEFINITIONS OF ALL SYSTEM BETS
C
C     ************************
C     *NUMBER OF MARKS IN BET*      4 BYTES
C     ************************
C     * BET BIT MASK         *      4 BYTES (CHOSE UP TO 16)
C     ************************
C
	INTEGER*4  LSYS_COMMON_LENGTH
	PARAMETER (LSYS_COMMON_LENGTH=(LMXSHR+1)*(LMXSHR+1)*LMXFULLMARK
     *	            *(LSYS_GAMSHRBON+1)*LSYS_MAXGAM+LSYS_TABMAX+960
     *	            +6*LSYSMAX+3*LSYS_MAXGAM)
	INTEGER*4 LSYS_IMAGE(LSYS_COMMON_LENGTH)
	EQUIVALENCE (LSYS_IMAGE,LSYS_ATR)
C
C
	INTEGER*4	 FRST_LSYSCOM(2)
	EQUIVALENCE	(FRST_LSYSCOM, LSYS_ATR)
	INTEGER*4	 LAST_LSYSCOM
	EQUIVALENCE	(LAST_LSYSCOM, LSYS_BOARD(LSYSMAX))
C
	VOLATILE /LSYSCOM/
C
