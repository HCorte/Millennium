C     LTOWTB(LTGNBR,LTGBON+1,LTGBET,NUMLTO) ;WINNING DIVISIONS TABLE
C     LTOPER(LTGDIV,NUMLTO)                 ;DIVISION PERCENTAGES
C     LTOSPR(NUMLTO)                        ;SALES PERCENTAGE
C     LTOTSR(LTGDIV,2,NUMLTO)               ;TOTAL SHARE COUNT (REGULAR,BONUS)
C     LTOREV(NUMLTO)                        ;LOTTO REVISION NUMBER
C     LTOBDR(NUMLTO)                        ;BONUS DRAW ENABLE FLAG
C     LTOLST(NUMLTO)                        ;LAST DRAWS STATUS
C     LTOLSV(LTGDIV,2,NUMLTO)               ;LAST DRAWS SHARE VALUES
