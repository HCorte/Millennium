C RECORD OFFSET PARAMETERS
C
	INTEGER*4 ODAFSTS_OFF, ODAFCDC_OFF, ODAFYER_OFF, ODAFJUL_OFF
	INTEGER*4 ODAFWEK_OFF
	PARAMETER (ODAFSTS_OFF = 1)				   !1
	PARAMETER (ODAFCDC_OFF = ODAFSTS_OFF + 1)			   !2
	PARAMETER (ODAFYER_OFF = ODAFCDC_OFF + 1)			   !3
	PARAMETER (ODAFJUL_OFF = ODAFYER_OFF + 1)			   !4
	PARAMETER (ODAFWEK_OFF = ODAFJUL_OFF + 1)			   !5
C
	INTEGER*4 ODAFTYP_OFF, ODAFDRW_OFF, ODAFHDR_OFF, ODAFVAL_OFF
	INTEGER*4 ODAFSAL_OFF
	PARAMETER (ODAFTYP_OFF = ODAFWEK_OFF + 1)			   !6
	PARAMETER (ODAFDRW_OFF = ODAFTYP_OFF + NUMTOT*NUMFIN*MAXGAM) !306
	PARAMETER (ODAFHDR_OFF = ODAFDRW_OFF + MAXGAM)		   !331
	PARAMETER (ODAFVAL_OFF = ODAFHDR_OFF + MAXGAM)		   !356
	PARAMETER (ODAFSAL_OFF = ODAFVAL_OFF + MAXGAM)		   !381
C
	INTEGER*4 ODAFDIS_OFF , ODAFFRE_OFF
	INTEGER*4 ODAFCRS_OFF, ODAFIVAL_OFF, ODAFICLM_OFF
	PARAMETER (ODAFDIS_OFF = ODAFSAL_OFF + MAXDRW*MAXGAM)	   !881
	PARAMETER (ODAFCRS_OFF = ODAFDIS_OFF + NUMTOT*MAXGAM)	   !931
	PARAMETER (ODAFIVAL_OFF = ODAFCRS_OFF + NUMCRS)
	PARAMETER (ODAFICLM_OFF = ODAFIVAL_OFF + 1)
	PARAMETER (ODAFFRE_OFF = ODAFICLM_OFF + 1)
C
C CALCULATE FREE SPACE BASED ON MACHINE DEPENDENT SECTOR SIZES.
C SHOULD ALLWAYS ADD UP TO A EVEN SECTOR SIZE BYTES (VAX 512).
C NOTE! IN CALCULATIONS, FRE_OFF-2 IS DONE TO TAKE CARE OF WHEN THE DATA SIZE
C       ENDS ON A EVEN SECTOR SIZE.
C 
        INTEGER*4 ODAFLEN
        PARAMETER(ODAFLEN = ODAFFRE_OFF-1)
C
        INTEGER*4 IODAFSEC
        PARAMETER(IODAFSEC = ODAFLEN/128 + 1)
C
        INTEGER*4 ODAFSEC
        PARAMETER(ODAFSEC = IODAFSEC*2)
C
        INTEGER*4 ODAFFRESIZ
        PARAMETER(ODAFFRESIZ = ODAFSEC *64 - ODAFLEN)
C
        INTEGER*4 ODAFREC(ODAFSEC*64)
C
	INTEGER*4 ODAFSTS,ODAFCDC,ODAFYER,ODAFJUL,ODAFWEK
	INTEGER*4 ODAFTYP(NUMTOT,NUMFIN,MAXGAM)
	INTEGER*4 ODAFDRW(MAXGAM),ODAFHDR(MAXGAM)
	INTEGER*4 ODAFVAL(MAXGAM),ODAFSAL(MAXDRW,MAXGAM)
	INTEGER*4 ODAFDIS(NUMTOT,MAXGAM)
        INTEGER*4 ODAFCRS(NUMCRS)
        INTEGER*4 ODAFIVAL
        INTEGER*4 ODAFICLM
        INTEGER*4 ODAFFRE(ODAFFRESIZ)
C
C
	EQUIVALENCE (ODAFSTS,ODAFREC(ODAFSTS_OFF))
	EQUIVALENCE (ODAFCDC,ODAFREC(ODAFCDC_OFF))
	EQUIVALENCE (ODAFYER,ODAFREC(ODAFYER_OFF))
	EQUIVALENCE (ODAFJUL,ODAFREC(ODAFJUL_OFF))
	EQUIVALENCE (ODAFWEK,ODAFREC(ODAFWEK_OFF))
	EQUIVALENCE (ODAFTYP(1,1,1),ODAFREC(ODAFTYP_OFF))
	EQUIVALENCE (ODAFDRW(1),ODAFREC(ODAFDRW_OFF))
	EQUIVALENCE (ODAFHDR(1),ODAFREC(ODAFHDR_OFF))
	EQUIVALENCE (ODAFVAL(1),ODAFREC(ODAFVAL_OFF))
	EQUIVALENCE (ODAFSAL(1),ODAFREC(ODAFSAL_OFF))
	EQUIVALENCE (ODAFDIS(1),ODAFREC(ODAFDIS_OFF))
        EQUIVALENCE (ODAFCRS,ODAFREC(ODAFCRS_OFF))
        EQUIVALENCE (ODAFIVAL,ODAFREC(ODAFIVAL_OFF))
        EQUIVALENCE (ODAFICLM,ODAFREC(ODAFICLM_OFF))
        EQUIVALENCE (ODAFFRE,ODAFREC(ODAFFRE_OFF))
C
