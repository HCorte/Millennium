C
C MAIN POOLS ARRAY PARAMETERS
C
	INTEGER*4 SSGPOL
	PARAMETER (SSGPOL=262144)	!MAX NO. OF UNIQUE COMBINATIONS KEPT
C					!IN THE MEMORY ( (SSGNOB+1)*SSGBEN )
	INTEGER*4 SSGNOB
	PARAMETER (SSGNOB=65535)	!SSGNOB+1 IS NO. OF BUCKETS IN 
                                        !MAIN/AMOUNT ARRAYS
C
	INTEGER*4 SSGBSZ
	PARAMETER (SSGBSZ=16)		!MAIN/AMOUNT ARRAYS BUCKET SIZE (BYTES)
C
	INTEGER*4 SSGISZ
	PARAMETER (SSGISZ=4)		!MAIN/AMOUNT ARRAYS BUCKET SIZE (I*4)
C
	INTEGER*4 SSGBEN
	PARAMETER (SSGBEN=4)		!MAIN/AMOUNT ARRAYS BUCKET CAPACITY
C					!IN ENTRIES
	INTEGER*4 SSGMNS
	PARAMETER (SSGMNS=4)		!MAIN ARRAY ENTRY SIZE (BYTES)
C
C MAIN POOLS ENTRY OFFSETS
C
		INTEGER*4 SSGUID,SSGTEL
		PARAMETER (SSGUID=1)		!UNIQUE COMBINATION IDENTIFIER
		PARAMETER (SSGTEL=4)		!LINK TOP ARRAY ENTRY (0-NONE)
C
C TOP COMBINATIONS ARRAY PARAMETERS
C
	INTEGER*4 SSGTOP
	PARAMETER (SSGTOP=127)		!NO. OF MOST SOLD COMBINATIONS TRACED
C
	INTEGER*4 SSGTPS
	PARAMETER (SSGTPS=8)		!TOP COMB. ARRAY ENTRY SIZE (BYTES)
C
C TOP COMBINATION ENTRY OFFSETS
C
		INTEGER*4 SSGCID,SSGAMB,SSGAME,SSGPEL,SSGNEL
		PARAMETER (SSGCID=1)		!UNIQUE COMBINATION IDENTIFIER
		PARAMETER (SSGAMB=4)		!BUCKET# IN AMOUNT ARRAY (U*2)
		PARAMETER (SSGAME=6)		!ENTRY# IN A BUCKET (AMOUNT ARR)
		PARAMETER (SSGPEL=7)		!LINK TO PREVIOUS ENTRY
		PARAMETER (SSGNEL=8)		!LINK TO NEXT ENTRY
C
C
	COMMON /SSPCOM/
     *		SSPLAMT(NUMSSC),
     *		SSPFEL(NUMSSC),
     *		SSPLEL(NUMSSC),
     *		SSPTNUM(NUMSSC),
     *		SSPONUM(NUMSSC),
     *		SSPCMB(NUMSSC),
     *		SSPDCMB(NUMSSC),
     *		SSPNBA(NUMSSC),
     *		SSPNBU(NUMSSC),
     *		SSPMAIN(SSGBSZ,0:SSGNOB,NUMSSC),
     *		SSPCAMT(SSGISZ,0:SSGNOB,NUMSSC),
     *		SSPTOPC(SSGTPS,SSGTOP,NUMSSC),
     *		SSPFRE(2518)
C
	INTEGER*4 SSPLAMT			!LOWEST COMBINATION AMOUNT
	INTEGER*4 SSPFEL			!LINK TO FIRST COMBINATION
	INTEGER*4 SSPLEL			!LINK TO LAST COMBINATION
	INTEGER*4 SSPTNUM			!NUMBER OF ENTRIES IN TOP ARRAY
	INTEGER*4 SSPONUM			!NUMBER OF RECORDS IN THE POOLS
	INTEGER*4 SSPNBA			!NUMBER OF BUCKETS ASSIGNED
	INTEGER*4 SSPNBU			!MAX NUMBER OF BUCKETS USED
C						! OVERFLOW FILE
	INTEGER*4 SSPCMB			!NUMBER OF PLAYED COMBINATIONS
	INTEGER*4 SSPDCMB			!NUMBER OF DROPPED COMBINATIONS
	BYTE	  SSPMAIN			!MAIN POOLS ARRAY
	INTEGER*4 SSPCAMT			!COMBINATION AMOUNT ARRAY
	BYTE	  SSPTOPC			!TOP COMBINATIONS ARRAY
C
	INTEGER*4 SSPFRE
C
C  EQUIVALENCE FOR MAIN TABLE

        INTEGER*4 ISSPMAIN(SSGISZ,0:SSGNOB,NUMSSC)
        EQUIVALENCE(SSPMAIN,ISSPMAIN)
C
C EQUIVALENCE FOR CHECKPOINT
C
	INTEGER*4 SSPBLK,SSPCSB
	PARAMETER(SSPCSB = 1538)
	DIMENSION SSPBLK(2048,SSPCSB)
	EQUIVALENCE(SSPBLK(1,1),SSPLAMT)
C
	VOLATILE /SSPCOM/
C
        INTEGER*4        FRST_SSPCOM(2)
        EQUIVALENCE     (FRST_SSPCOM, SSPBLK(1,1))
        INTEGER*4        LAST_SSPCOM
        EQUIVALENCE     (LAST_SSPCOM, SSPBLK(2048,SSPCSB))

