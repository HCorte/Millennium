C
C STRUCTURE OF EUROCONFIG FILE (EUROCONFIG.FIL)
C
        INTEGER*4  ECFGREVSON_OFF, ECFGTGISON_OFF, ECFGOPTSON_OFF
        INTEGER*4  ECFPRICE_OFF, ECFOPTCTRL_OFF
        INTEGER*4  ECFBITMAP1_OFF, ECFBITMAP2_OFF, ECFBITMAP3_OFF, ECFBITMAP4_OFF
        INTEGER*4  ECFBITMAP5_OFF, ECFBITMAP6_OFF, ECFBITMAP7_OFF, ECFMAXBETS_OFF
        INTEGER*4  ECFACTIVE_OFF
        PARAMETER (ECFGREVSON_OFF = 1)
        PARAMETER (ECFGTGISON_OFF = ECFGREVSON_OFF + 1)
        PARAMETER (ECFGOPTSON_OFF = ECFGTGISON_OFF + 1)
        PARAMETER (ECFPRICE_OFF   = ECFGOPTSON_OFF + 1)
        PARAMETER (ECFOPTCTRL_OFF = ECFPRICE_OFF   + 1)
        PARAMETER (ECFBITMAP1_OFF = ECFOPTCTRL_OFF + 1)
        PARAMETER (ECFBITMAP2_OFF = ECFBITMAP1_OFF + 1)
        PARAMETER (ECFBITMAP3_OFF = ECFBITMAP2_OFF + 1)
        PARAMETER (ECFBITMAP4_OFF = ECFBITMAP3_OFF + 1)
        PARAMETER (ECFBITMAP5_OFF = ECFBITMAP4_OFF + 1)
        PARAMETER (ECFBITMAP6_OFF = ECFBITMAP5_OFF + 1)
        PARAMETER (ECFBITMAP7_OFF = ECFBITMAP6_OFF + 1)
        PARAMETER (ECFMAXBETS_OFF = ECFBITMAP7_OFF + 1)
        PARAMETER (ECFACTIVE_OFF  = ECFMAXBETS_OFF + 1)
        
        INTEGER*4 ECFLEN
        PARAMETER (ECFLEN = ECFACTIVE_OFF - 1)
C        PARAMETER (ECFLEN = ECFMAXBETS_OFF - 1)
        INTEGER*4 IECFSEC
        PARAMETER (IECFSEC = ECFLEN/128 + 1)
        INTEGER*4 ECFSEC
        PARAMETER (ECFSEC = IECFSEC*2)
        
        INTEGER*4 ECFFRESIZ
        PARAMETER (ECFFRESIZ = ECFSEC * 64 - ECFLEN)
        
        INTEGER*4 ECFREC(ECFLEN+ECFFRESIZ)
C        INTEGER*4 ECFREC(ECFSEC*64)
                
        INTEGER*4 ECFGREVSON
        INTEGER*4 ECFGTGISON
        INTEGER*4 ECFGOPTSON
        INTEGER*4 ECFPRICE
        INTEGER*4 ECFOPTCTRL
        INTEGER*4 ECFBITMAP1
        INTEGER*4 ECFBITMAP2
        INTEGER*4 ECFBITMAP3
        INTEGER*4 ECFBITMAP4
        INTEGER*4 ECFBITMAP5
        INTEGER*4 ECFBITMAP6
        INTEGER*4 ECFBITMAP7
        INTEGER*4 ECFMAXBETS
        INTEGER*4 ECFACTIVE
        INTEGER*4 ECFFRE(ECFFRESIZ)
        
        EQUIVALENCE(ECFGREVSON, ECFREC(ECFGREVSON_OFF))
        EQUIVALENCE(ECFGTGISON, ECFREC(ECFGTGISON_OFF))
        EQUIVALENCE(ECFGOPTSON, ECFREC(ECFGOPTSON_OFF))
        EQUIVALENCE(ECFPRICE, ECFREC(ECFPRICE_OFF))
        EQUIVALENCE(ECFOPTCTRL, ECFREC(ECFOPTCTRL_OFF))
        EQUIVALENCE(ECFBITMAP1, ECFREC(ECFBITMAP1_OFF))
        EQUIVALENCE(ECFBITMAP2, ECFREC(ECFBITMAP2_OFF))
        EQUIVALENCE(ECFBITMAP3, ECFREC(ECFBITMAP3_OFF))
        EQUIVALENCE(ECFBITMAP4, ECFREC(ECFBITMAP4_OFF))
        EQUIVALENCE(ECFBITMAP5, ECFREC(ECFBITMAP5_OFF))
        EQUIVALENCE(ECFBITMAP6, ECFREC(ECFBITMAP6_OFF))
        EQUIVALENCE(ECFBITMAP7, ECFREC(ECFBITMAP7_OFF))
        EQUIVALENCE(ECFMAXBETS, ECFREC(ECFMAXBETS_OFF))
        EQUIVALENCE(ECFACTIVE, ECFREC(ECFACTIVE_OFF))
        
