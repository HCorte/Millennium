	INTEGER*4 RDFPOL_OFF
	INTEGER*4 RDFADD_OFF
	INTEGER*4 RDFUSE_OFF
	INTEGER*4 RDFUDW_OFF
	INTEGER*4 RDFADW_OFF
	INTEGER*4 RDFADR_OFF
	INTEGER*4 RDFUSD_OFF
	INTEGER*4 RDFDRW_OFF
        INTEGER*4 RDF_WRFTAB_OFF
        INTEGER*4 RDF_WRFCUD_OFF
	INTEGER*4 RDF_SPTPOLDIV_OFF
	INTEGER*4 RDFFRE_OFF

	PARAMETER( RDFPOL_OFF = 1)
	PARAMETER( RDFADD_OFF = RDFPOL_OFF +MAXGAM)
	PARAMETER( RDFUSE_OFF = RDFADD_OFF +MAXGAM)
	PARAMETER( RDFUDW_OFF = RDFUSE_OFF +MAXGAM)
	PARAMETER( RDFADW_OFF = RDFUDW_OFF +MAXGAM)
	PARAMETER( RDFADR_OFF = RDFADW_OFF +MAXGAM)
	PARAMETER( RDFUSD_OFF = RDFADR_OFF +MAXGAM)
	PARAMETER( RDFDRW_OFF = RDFUSD_OFF +MAXGAM)
        PARAMETER( RDF_WRFTAB_OFF = RDFDRW_OFF +MAXGAM)
        PARAMETER( RDF_WRFCUD_OFF = RDF_WRFTAB_OFF +MAXGAM*10)
	PARAMETER( RDF_SPTPOLDIV_OFF = RDF_WRFCUD_OFF +MAXGAM)
	PARAMETER( RDFFRE_OFF = RDF_SPTPOLDIV_OFF + NUMSPT*SPGDIV)
C
        INTEGER*4 RDFLEN
        PARAMETER(RDFLEN = RDFFRE_OFF-1)
C
        INTEGER*4 IRDFSEC
        PARAMETER(IRDFSEC = RDFLEN/128 + 1)
C
        INTEGER*4 RDFSEC
        PARAMETER(RDFSEC = IRDFSEC*2)
C
        INTEGER*4 RDFFRESIZ
        PARAMETER(RDFFRESIZ = RDFSEC * 64 - RDFLEN)
C
        INTEGER*4 RDFREC(RDFLEN+RDFFRESIZ)
C
	INTEGER*4 RDFPOL(MAXGAM)
	INTEGER*4 RDFADD(MAXGAM)
	INTEGER*4 RDFUSE(MAXGAM)
	INTEGER*4 RDFUDW(MAXGAM)
	INTEGER*4 RDFADW(MAXGAM)
	INTEGER*4 RDFADR(MAXGAM)
	INTEGER*4 RDFUSD(MAXGAM)
	INTEGER*4 RDFDRW(MAXGAM)
        INTEGER*4 RDF_WRFTAB(10,MAXGAM)
        INTEGER*4 RDF_WRFCUD(MAXGAM)
        INTEGER*4 RDF_SPTPOLDIV(NUMSPT,SPGDIV)
	INTEGER*4 RDFFRE(RDFFRESIZ)

	EQUIVALENCE (RDFPOL(1),RDFREC(RDFPOL_OFF))
	EQUIVALENCE (RDFADD(1),RDFREC(RDFADD_OFF))
	EQUIVALENCE (RDFUSE(1),RDFREC(RDFUSE_OFF))
	EQUIVALENCE (RDFUDW(1),RDFREC(RDFUDW_OFF))
	EQUIVALENCE (RDFADW(1),RDFREC(RDFADW_OFF))
	EQUIVALENCE (RDFADR(1),RDFREC(RDFADR_OFF))
	EQUIVALENCE (RDFUSD(1),RDFREC(RDFUSD_OFF))
	EQUIVALENCE (RDFDRW(1),RDFREC(RDFDRW_OFF))
        EQUIVALENCE (RDF_WRFTAB(1,1),RDFREC(RDF_WRFTAB_OFF))
        EQUIVALENCE (RDF_WRFCUD(1),RDFREC(RDF_WRFCUD_OFF))
        EQUIVALENCE (RDF_SPTPOLDIV(1,1),RDFREC(RDF_SPTPOLDIV_OFF))
	EQUIVALENCE (RDFFRE(1),RDFREC(RDFFRE_OFF))
