        INTEGER*4 SPTSTS_OFF, SPTCTM_OFF, SPTTIM_OFF, SPTDRW_OFF
        PARAMETER(SPTSTS_OFF=1)
        PARAMETER(SPTCTM_OFF=SPTSTS_OFF+NUMSPT)
        PARAMETER(SPTTIM_OFF=SPTCTM_OFF+NUMSPT)
        PARAMETER(SPTDRW_OFF=SPTTIM_OFF+NUMSPT)

        INTEGER*4 SPTBSD_OFF, SPTESD_OFF, SPTPUP_OFF, SPTUPD_OFF
        PARAMETER(SPTBSD_OFF=SPTDRW_OFF+NUMSPT)
        PARAMETER(SPTESD_OFF=SPTBSD_OFF+NUMSPT)
        PARAMETER(SPTPUP_OFF=SPTESD_OFF+NUMSPT)
        PARAMETER(SPTUPD_OFF=SPTPUP_OFF+NUMSPT)

        INTEGER*4 SPTDAT_OFF, SPTADV_OFF, SPTSAL_OFF, SPTSHV_OFF
        PARAMETER(SPTDAT_OFF=SPTUPD_OFF+NUMSPT)
        PARAMETER(SPTADV_OFF=SPTDAT_OFF+DATLEN*NUMSPT)
        PARAMETER(SPTSAL_OFF=SPTADV_OFF+NUMADV*NUMSPT)
        PARAMETER(SPTSHV_OFF=SPTSAL_OFF+SPGENT*NUMSPT)

        INTEGER*4 SPTSHR_OFF, SPTPOL_OFF, SPTPAD_OFF, SPTPRG_OFF
        PARAMETER(SPTSHR_OFF=SPTSHV_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTPOL_OFF=SPTSHR_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTPAD_OFF=SPTPOL_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTPRG_OFF=SPTPAD_OFF+SPGDIV*NUMSPT)

        INTEGER*4 SPTAFD_OFF, SPTCSP_OFF, SPTOSV_OFF, SPTOSH_OFF
        PARAMETER(SPTAFD_OFF=SPTPRG_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTCSP_OFF=SPTAFD_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTOSV_OFF=SPTCSP_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTOSH_OFF=SPTOSV_OFF+SPGDIV*NUMSPT)

        INTEGER*4 SPTWIN_OFF, SPTHLD_OFF, SPTPRP_OFF, SPTPRN_OFF
        PARAMETER(SPTWIN_OFF=SPTOSH_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTHLD_OFF=SPTWIN_OFF+SPGNBR*NUMSPT)
        PARAMETER(SPTPRP_OFF=SPTHLD_OFF+SPGNBR*NUMSPT)
        PARAMETER(SPTPRN_OFF=SPTPRP_OFF+NUMSPT)

        INTEGER*4 SPTTAX_OFF, SPTRES_OFF, SPTAPL_OFF, SPTMIN_OFF
        PARAMETER(SPTTAX_OFF=SPTPRN_OFF+NUMSPT)
        PARAMETER(SPTRES_OFF=SPTTAX_OFF+NUMSPT)
        PARAMETER(SPTAPL_OFF=SPTRES_OFF+2*NUMSPT)
        PARAMETER(SPTMIN_OFF=SPTAPL_OFF+NUMSPT)

        INTEGER*4 SPTSER_OFF, SPTOPA_OFF, SPTPRC_OFF, SPTMAX_OFF
        PARAMETER(SPTSER_OFF=SPTMIN_OFF+NUMSPT)
        PARAMETER(SPTOPA_OFF=SPTSER_OFF+NUMSPT)
        PARAMETER(SPTPRC_OFF=SPTOPA_OFF+NUMSPT)
        PARAMETER(SPTMAX_OFF=SPTPRC_OFF+NUMSPT)

        INTEGER*4 SPTMLT_OFF, SPTDIV_OFF, SPTMAT_OFF, SPTPER_OFF
        INTEGER*4 SPTMDS_OFF
        PARAMETER(SPTMLT_OFF=SPTMAX_OFF+NUMSPT)
        PARAMETER(SPTMDS_OFF=SPTMLT_OFF+NUMSPT)
        PARAMETER(SPTDIV_OFF=SPTMDS_OFF+(MAXMLTD_AVL/4)*NUMSPT)
        PARAMETER(SPTMAT_OFF=SPTDIV_OFF+NUMSPT)
        PARAMETER(SPTPER_OFF=SPTMAT_OFF+SPGDIV*NUMSPT)

        INTEGER*4 SPTSPR_OFF, SPTTSR_OFF, SPTREV_OFF, SPTNMS_OFF
        PARAMETER(SPTSPR_OFF=SPTPER_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTTSR_OFF=SPTSPR_OFF+NUMSPT)
        PARAMETER(SPTREV_OFF=SPTTSR_OFF+SPGDIV*NUMSPT)
        PARAMETER(SPTNMS_OFF=SPTREV_OFF+NUMSPT)



        INTEGER*4 SPTCLB_OFF, SPTASH_OFF, SPTFRG_OFF, SPTWRF_OFF
        PARAMETER(SPTCLB_OFF = SPTNMS_OFF+((SPNMS_LEN/4)*2*SPGNBR*
     *                                     NUMSPT))
        PARAMETER(SPTASH_OFF = SPTCLB_OFF + 25*NUMSPT)
        PARAMETER(SPTFRG_OFF = SPTASH_OFF + SPGDIV*NUMSPT)
        PARAMETER(SPTWRF_OFF = SPTFRG_OFF + NUMSPT)

        INTEGER*4 SPTBST_OFF, SPTBAL_OFF, SPTEVN_OFF
        PARAMETER(SPTBST_OFF = SPTWRF_OFF + POSTED*NUMSPT)
        PARAMETER(SPTBAL_OFF = SPTBST_OFF + NUMSPT)
        PARAMETER(SPTEVN_OFF = SPTBAL_OFF + MAXDRW*NUMSPT)
C
        INTEGER*4 SPTEXT_OFF
        INTEGER*4 SPTRGT_OFF
        INTEGER*4 SPTROD_OFF
        PARAMETER(SPTEXT_OFF = SPTEVN_OFF + (SPEVN_LEN/4)*NUMSPT)
        PARAMETER(SPTRGT_OFF = SPTEXT_OFF + NUMSPT)
        PARAMETER(SPTROD_OFF = SPTRGT_OFF + 2 * NUMSPT)
C
        INTEGER * 4 SPTECD_OFF
        INTEGER * 4 SPTMCE_OFF
        INTEGER * 4 SPTDCD_OFF
        INTEGER * 4 SPTRWD_OFF
C
        PARAMETER(SPTECD_OFF = SPTROD_OFF + 2 * NUMSPT)
        PARAMETER(SPTMCE_OFF = SPTECD_OFF + SPGNBR * NUMSPT)
        PARAMETER(SPTDCD_OFF = SPTMCE_OFF + NUMSPT)
        PARAMETER(SPTRWD_OFF = SPTDCD_OFF + NUMSPT)
C
        INTEGER*4 SPTFRE_OFF
        PARAMETER(SPTFRE_OFF = SPTRWD_OFF + NUMSPT)

        INTEGER*4 SPTSEC_SIZE, SPTSEC_NUM, SPTLEN
        PARAMETER(SPTSEC_SIZE = 2048)
        PARAMETER(SPTSEC_NUM = NINT(FLOAT((SPTFRE_OFF-2)/
     *                         SPTSEC_SIZE)+.5))
        PARAMETER(SPTLEN = SPTSEC_SIZE * SPTSEC_NUM)


        COMMON /SPTCOM/
     *   SPTSTS(NUMSPT),
     *   SPTCTM(NUMSPT),
     *   SPTTIM(NUMSPT),
     *   SPTDRW(NUMSPT),
     *   SPTBSD(NUMSPT),
     *   SPTESD(NUMSPT),
     *   SPTPUP(NUMSPT),
     *   SPTUPD(NUMSPT),
     *   SPTDAT(DATLEN,NUMSPT),
     *   SPTADV(NUMADV,NUMSPT),
     *   SPTSAL(SPGENT,NUMSPT)
        COMMON /SPTCOM/
     *   SPTSHV(SPGDIV,NUMSPT),
     *   SPTSHR(SPGDIV,NUMSPT),
     *   SPTPOL(SPGDIV,NUMSPT),
     *   SPTPAD(SPGDIV,NUMSPT),
     *   SPTPRG(SPGDIV,NUMSPT),
     *   SPTAFD(SPGDIV,NUMSPT),
     *   SPTCSP(SPGDIV,NUMSPT),
     *   SPTOSV(SPGDIV,NUMSPT),
     *   SPTOSH(SPGDIV,NUMSPT)
        COMMON /SPTCOM/
     *   SPTWIN(SPGNBR,NUMSPT),
     *   SPTHLD(SPGNBR,NUMSPT),
     *   SPTPRP(NUMSPT),
     *   SPTPRN(NUMSPT),
     *   SPTTAX(NUMSPT),
     *   SPTRES(2,NUMSPT),
     *   SPTAPL(NUMSPT),
     *   SPTMIN(NUMSPT)
        COMMON /SPTCOM/
     *   SPTSER(NUMSPT),
     *   SPTOPA(NUMSPT),
     *   SPTPRC(NUMSPT),
     *   SPTMAX(NUMSPT),
     *   SPTMLT(NUMSPT),
     *   SPTMDS(MAXMLTD_AVL,NUMSPT),
     *   SPTDIV(NUMSPT),
     *   SPTMAT(SPGDIV,NUMSPT),
     *   SPTPER(SPGDIV,NUMSPT)
        COMMON /SPTCOM/
     *   SPTSPR(NUMSPT),
     *   SPTTSR(SPGDIV,NUMSPT),
     *   SPTREV(NUMSPT),
     *   SPTNMS(SPNMS_LEN/4,2,SPGNBR,NUMSPT),
     *   SPTCLB(25,NUMSPT),
     *   SPTASH(SPGDIV,NUMSPT),
     *   SPTFRG(NUMSPT),
     *   SPTWRF(POSTED,NUMSPT),
     *   SPTBST(NUMSPT),
     *   SPTBAL(MAXDRW,NUMSPT),
     *   SPTEVN(SPEVN_LEN/4,NUMSPT),
     *   SPTEXT(NUMSPT),
     *   SPTRGT(2,NUMSPT),
     *   SPTROD(2,NUMSPT),
     *   SPTECD(SPGNBR, NUMSPT),
     *   SPTMCE(NUMSPT),
     *   SPTDCD(NUMSPT),
     *   SPTRWD(NUMSPT),
     *   SPTFRE(SPTLEN - SPTFRE_OFF + 1)
C
        INTEGER*4 SPTSTS, SPTCTM, SPTTIM, SPTDRW, SPTBSD, SPTESD
        INTEGER*4 SPTPUP, SPTUPD, SPTDAT, SPTADV, SPTSAL, SPTSHV
        INTEGER*4 SPTSHR, SPTPOL, SPTPAD, SPTPRG, SPTAFD, SPTCSP
        INTEGER*4 SPTOSV, SPTOSH, SPTWIN, SPTHLD, SPTPRP, SPTPRN
        INTEGER*4 SPTTAX, SPTRES, SPTAPL, SPTMIN, SPTSER, SPTOPA
        INTEGER*4 SPTPRC, SPTMAX, SPTMLT, SPTDIV, SPTMAT, SPTPER
        INTEGER*4 SPTSPR, SPTTSR, SPTREV, SPTNMS, SPTCLB, SPTASH
        INTEGER*4 SPTFRG, SPTWRF, SPTBST, SPTFRE, SPTBAL, SPTEVN
	INTEGER*4 SPTEXT, SPTRGT, SPTROD, SPTECD, SPTMCE, SPTDCD
	INTEGER*4 SPTRWD
C
        BYTE      SPTMDS
C
C SPORTS SYSTEM BET TABLES
C

        INTEGER*4 SPSATR_OFF, SPSPTR_OFF, SPSNUM_OFF, SPSTAB_OFF
        PARAMETER(SPSATR_OFF = 1)
        PARAMETER(SPSPTR_OFF = SPSATR_OFF + SPGSYS)
        PARAMETER(SPSNUM_OFF = SPSPTR_OFF + SPGSYS)
        PARAMETER(SPSTAB_OFF = SPSNUM_OFF + 5*SPGSYS)

        INTEGER*4 SPSFPT_OFF, SPSTST_OFF, SPTINI_OFF, SPSFSF_OFF
        PARAMETER(SPSFPT_OFF = SPSTAB_OFF + 260000/2)  !I*2
        PARAMETER(SPSTST_OFF = SPSFPT_OFF + 1)
        PARAMETER(SPTINI_OFF = SPSTST_OFF + 1)
        PARAMETER(SPSFSF_OFF = SPTINI_OFF + 1)
  
        INTEGER*4 SPSGAR_OFF
        PARAMETER(SPSGAR_OFF = SPSFSF_OFF + 16*16*NUMSPT)
C
C SPORTS WQP MARK PERCENT TABLE
C
        INTEGER*4 SPSVER_OFF, SPSROP_OFF, SPSUPT_OFF
        PARAMETER(SPSVER_OFF = SPSGAR_OFF + SPGSYS)
        PARAMETER(SPSROP_OFF = SPSVER_OFF + NUMSPT)
        PARAMETER(SPSUPT_OFF = SPSROP_OFF + SPGNBR*3*NUMSPT)

        INTEGER*4 SPSFRE_OFF
        PARAMETER(SPSFRE_OFF = SPSUPT_OFF + NUMSPT)

        INTEGER*4 SPSSEC_SIZE, SPSSEC_NUM, SPSLEN
        PARAMETER(SPSSEC_SIZE = 2048)
        PARAMETER(SPSSEC_NUM = NINT(FLOAT((SPSFRE_OFF-2)/
     *                         SPSSEC_SIZE)+.5))
        PARAMETER(SPSLEN = SPSSEC_SIZE * SPSSEC_NUM)


        COMMON /SPTCOM/
     *         SPSATR(SPGSYS),      !SYSTEM ATRIBUTE, FULL,REDUCED,U
     *         SPSPTR(SPGSYS),      !POINTER TO DEFINITION IN SPSTAB
     *         SPSNUM(5,SPGSYS),    !DEF OF BET: MARK_3/_2/_1/NUM_ROWS/NUM_BOARDS
     *         SPSTAB(260000),      !DEFINITION OF ALL BETS
     *         SPSFPT,              !FREE PLACE IN SPSTAB
     *         SPSTST,              !.NON. 0 IF TEST MODE
     *         SPTINI,              !INITIALIZE FLAG
     *         SPSFSF(0:15,0:15,NUMSPT),! FULL SYSTEM FLAGS
     *         SPSGAR(SPGSYS)       !SYSTEM GUARANTEE

        COMMON /SPTCOM/
     *         SPSVER(NUMSPT),           !WQP PERCENT TABLE REVISION
     *         SPSROP(SPGNBR,3,NUMSPT),  !WQP PERCENT TABLE
     *         SPSUPT(NUMSPT),           !WQP PERCENT TABLE LAST UPDATE TIME
     *         SPSFRE(SPSLEN - SPSFRE_OFF + 1)
C
        INTEGER*4 SPSATR, SPSPTR, SPSNUM, SPSFPT, SPSTST, SPTINI
        INTEGER*4 SPSFSF, SPSFRE, SPSGAR
        INTEGER*2 SPSTAB
        INTEGER*4 SPSVER, SPSROP, SPSUPT
C
C EQUIVALENCE FOR CHECKPOINT
C
        INTEGER*4 SPTCSB
        PARAMETER(SPTCSB= SPTSEC_NUM + SPSSEC_NUM)
C
        INTEGER*4 SPTBLK(2048,SPTCSB)
        EQUIVALENCE(SPTBLK(1,1),SPTSTS(1))
C
C
        INTEGER*4        FRST_SPTCOM(2)
        EQUIVALENCE     (FRST_SPTCOM, SPTSTS)
        INTEGER*4        LAST_SPTCOM
        EQUIVALENCE     (LAST_SPTCOM, SPTBLK(2048,SPTCSB))
C
        VOLATILE /SPTCOM/
C
