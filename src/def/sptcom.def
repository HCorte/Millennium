C SPORT GAME COMMON
C
C     SPTSTS(NUMSPT)                 ;STATUS
C     SPTCTM(NUMSPT)                 ;ACTUAL TIME WHEN CLOSED
C     SPTTIM(NUMSPT)                 ;TIME WHEN GAME SHOULD CLOSE
C     SPTDRW(NUMSPT)                 ;DRAW NUMBER
C     SPTBSD(NUMSPT)                 ;SPORT BEGGINING DRAW DATE
C     SPTESD(NUMSPT)                 ;SPORT ENDING DRAW DATE
C     SPTPUP(NUMSPT)                 ;LAST PURGE UPDATE
C     SPTUPD(NUMSPT)                 ;LAST FILE UPDATE
C     SPTDAT(DATLEN,NUMSPT)          ;DRAW DATES
C     SPTADV(NUMADV,NUMSPT)          ;ADVANCE DRAW DATES
C     SPTSAL(SPGENT,NUMSPT)          ;SALES DATA
C     SPTSHV(SPGDIV,NUMSPT)          ;SHARE VALUES
C     SPTSHR(SPGDIV,NUMSPT)          ;SHARES
C     SPTPOL(SPGDIV,NUMSPT)          ;POOL CARRIED OVER
C     SPTPAD(SPGDIV,NUMSPT)          ;AMOUNT PAID
C     SPTPRG(SPGDIV,NUMSPT)          ;AMOUNT PURGED
C     SPTAFD(SPGDIV,NUMSPT)          ;AMOUNTS FROM OTHERS DRAWS/GAMES (EXTRA)
C     SPTCSP(SPGDIV,NUMSPT)          ;CALCULATED SHARE CALCULATIONS POOLS
C     SPTOSV(SPGDIV,NUMSPT)          ;OFF LINE AMOUNT TO PRIZES BY DIVISION
C     SPTOSH(SPGDIV,NUMSPT)          ;OFF LINE SHARE
C     SPTWIN(SPGNBR,NUMSPT)          ;WINNING RESULTS
C     SPTHLD(SPGNBR,NUMSPT)          ;WINNING RESULTS HOLD
C     SPTPRP(NUMSPT)                 ;PERCENTAGE OF THE PROMISED AMOUNT
C     SPTPRN(NUMSPT)                 ;NUM. OF WEEKS WITHOUT DIV1 WINNERS
C     SPTTAX(NUMSPT)                 ;LOTTERY TAX
C     SPTRES(2,NUMSPT)               ;RESERVE POOL
C     SPTAPL(NUMSPT)                 ;ADDITIONAL POOL
C     SPTMIN(NUMSPT)                 ;MINIMUM POOL
C     SPTSER(NUMSPT)                 ;LAST SERIAL NUMBER
C     SPTOPA(NUMSPT)                 ;OVER-RIDE POOL AMOUNT
C     SPTPRC(NUMSPT)                 ;PRICE/SINGLE COMBINATION
C     SPTMAX(NUMSPT)                 ;NUMBER OF EVENTS (ROWS)
C     SPTMLT(NUMSPT)                 ;MULTI-DRAW ENABLE FLAG
C     SPTMDS(MAXMLTD_AVL,NUMSPT)     ;MULTI-DRAW SELECTED TABLE (52/4 WORDS)
C     SPTDIV(NUMSPT)                 ;# OF DIVISIONS
C     SPTMAT(SPGDIV,NUMSPT)          ;DIVISION MATCH TABLE
C     SPTPER(SPGDIV,NUMSPT)          ;DIVISION PERCENTAGES
C     SPTSPR(NUMSPT)                 ;SALES PERCENTAGE
C     SPTTSR(SPGDIV,NUMSPT)          ;TOTAL SHARE COUNT
C     SPTREV(NUMSPT)                 ;SPORT REVISION NUMBER
C     SPTNMS(SPNMS_LEN/4,2,SPGNBR,NUMSPT);TEAM NAMES
C     SPTCLB(25,NUMSPT)              ;CLUB VOTING COUNTS
C     SPTASH(SPGDIV,NUMSPT)          ;ADDITIONAL POOL BY DIV.
C     SPTFRG(NUMSPT)                 ;NUMBER OF RESULTS GAMES
C     SPTWRF(POSTED,NUMSPT)          ;WIN RESERV FUND
C     SPTBST(NUMSPT)                 ;BEST MATCH FLAG (ADJUST DIVISIONS)
C     SPTBAL(MAXDRW,NUMSPT)          ;BALANCE SALES INFO. BY DRAW
C     SPTEVN(SPEVN_LEN/4,NUMSPT)     ;EVENT NAME
C     SPTEXT(NUMSPT)                 ;EXTRAORDINARY DRAW
C     SPTRGT(2,NUMSPT)               ;WHERE ROLLOVER GO TO (1:GAME, 2:DRW)
C     SPTROD(2,NUMSPT)               ;WHERE ROLLOVER CAME FROM (1:GAME, 2:DRW)
C     SPTECD(SPGNBR, NUMSPT)         ;EVENT CANCEL DATE AND TIME
C     SPTMCE(NUMSPT)                 ;MAXIMUN NUMBER OF EVENTS CANCELLED TO CANCEL THE DRAW
C     SPTDCD(NUMSPT)                 ;DRAW CANCEL DATE AND TIME
C     SPTRWD(NUMSPT)                 ;REFUND WINNING DIVISION
C     SPTFRE(CALCULATED)             ;FREE SPACE
C
