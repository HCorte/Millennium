	INTEGER*4 LNBSTSOFF, LNBCTMOFF, LNBTIMOFF, LNBDRWOFF
	PARAMETER(LNBSTSOFF=1)
	PARAMETER(LNBCTMOFF=LNBSTSOFF+NUMNBR)
	PARAMETER(LNBTIMOFF=LNBCTMOFF+NUMNBR)
	PARAMETER(LNBDRWOFF=LNBTIMOFF+NUMNBR)
C
	INTEGER*4 LNBBSDOFF, LNBESDOFF, LNBPUPOFF, LNBUPDOFF
	PARAMETER(LNBBSDOFF=LNBDRWOFF+NUMNBR)
	PARAMETER(LNBESDOFF=LNBBSDOFF+NUMNBR)
	PARAMETER(LNBPUPOFF=LNBESDOFF+NUMNBR)
	PARAMETER(LNBUPDOFF=LNBPUPOFF+NUMNBR)
C
	INTEGER*4 LNBDATOFF, LNBADVOFF, LNBSALOFF, LNBWONOFF
	INTEGER*4 LNBASLOFF
	PARAMETER(LNBDATOFF=LNBUPDOFF+NUMNBR)
	PARAMETER(LNBADVOFF=LNBDATOFF+DATLEN*NUMNBR)
	PARAMETER(LNBSALOFF=LNBADVOFF+NUMADV*NUMNBR)
	PARAMETER(LNBASLOFF=LNBSALOFF+NUMTOT*NBGPOL*NUMNBR)
	PARAMETER(LNBWONOFF=LNBASLOFF+NUMTOT*NBGPOL*NUMNBR)
C
	INTEGER*4 LNBPADOFF, LNBPRGOFF, LNBPRZOFF, LNBWINOFF
	PARAMETER(LNBPADOFF=LNBWONOFF+NUMTOT*NBGPOL*NUMNBR*2)
	PARAMETER(LNBPRGOFF=LNBPADOFF+NUMTOT*NBGPOL*NUMNBR*2)
	PARAMETER(LNBPRZOFF=LNBPRGOFF+NUMTOT*NBGPOL*NUMNBR*2)
	PARAMETER(LNBWINOFF=LNBPRZOFF+NBGPOL*NUMNBR*2)
C
	INTEGER*4 LNBHLDOFF, LNBSEROFF, LNBMLTOFF, LNBOPTOFF
	INTEGER*4 LNBLIMOFF
	PARAMETER(LNBHLDOFF=LNBWINOFF+NBGPOL*NUMNBR*MAXBDR)
	PARAMETER(LNBLIMOFF=LNBHLDOFF+NUMNBR*MAXBDR)
	PARAMETER(LNBSEROFF=LNBLIMOFF+NUMNBR*3)
	PARAMETER(LNBMLTOFF=LNBSEROFF+NUMNBR)
	PARAMETER(LNBOPTOFF=LNBMLTOFF+NUMNBR)
C
	INTEGER*4 LNBTYPOFF, LNBPOLOFF, LNBRESOFF, LNBAPLOFF
	PARAMETER(LNBTYPOFF=LNBOPTOFF+NUMNBR)
	PARAMETER(LNBPOLOFF=LNBTYPOFF+NUMNBR)
	PARAMETER(LNBRESOFF=LNBPOLOFF+NUMNBR)
	PARAMETER(LNBAPLOFF=LNBRESOFF+NUMNBR)
C
	INTEGER*4 LNBBRKOFF, LNBROLOFF, LNBREVOFF, LNBMAXOFF
	PARAMETER(LNBBRKOFF=LNBAPLOFF+NUMNBR)
	PARAMETER(LNBROLOFF=LNBBRKOFF+NUMNBR)
	PARAMETER(LNBREVOFF=LNBROLOFF+NUMNBR)
	PARAMETER(LNBMAXOFF=LNBREVOFF+NUMNBR)
C
	INTEGER*4 LNBPRCOFF, LNBPEROFF, LNBBDROFF
	INTEGER*2 LNBTAXOFF
	PARAMETER(LNBPRCOFF=LNBMAXOFF+NUMNBR)
	PARAMETER(LNBPEROFF=LNBPRCOFF+NUMNBR)
        PARAMETER(LNBBDROFF=LNBPEROFF+NUMNBR)
	PARAMETER(LNBTAXOFF=LNBBDROFF+NUMNBR)
C
	INTEGER*4 LNBRECLEN
	PARAMETER(LNBRECLEN=(LNBTAXOFF+NUMNBR)-1)
C
C LOGICAL RECORD DEFINITION
C
	INTEGER*4 LNBREC(LNBRECLEN)
C
C GAME FILE VARIABLE DEFINITIONS
C
	INTEGER*4 LNBSTS(NUMNBR)
	INTEGER*4 LNBCTM(NUMNBR),LNBTIM(NUMNBR)
	INTEGER*4 LNBDRW(NUMNBR),LNBBSD(NUMNBR)
	INTEGER*4 LNBPUP(NUMNBR),LNBUPD(NUMNBR)
	INTEGER*4 LNBESD(NUMNBR),LNBDAT(DATLEN,NUMNBR)
	INTEGER*4 LNBADV(NUMADV,NUMNBR)
	INTEGER*4 LNBSAL(NUMTOT,NBGPOL,NUMNBR)
	INTEGER*4 LNBASL(NUMTOT,NBGPOL,NUMNBR)
	INTEGER*4 LNBWON(NUMTOT,NBGPOL,2,NUMNBR)
	INTEGER*4 LNBPAD(NUMTOT,NBGPOL,2,NUMNBR)
	INTEGER*4 LNBPRG(NUMTOT,NBGPOL,2,NUMNBR)
	INTEGER*4 LNBPRZ(NBGPOL,2,NUMNBR)
	INTEGER*4 LNBWIN(NBGPOL,MAXBDR,NUMNBR)
	INTEGER*4 LNBHLD(MAXBDR,NUMNBR)
	INTEGER*4 LNBLIM(3,NUMNBR)
	INTEGER*4 LNBSER(NUMNBR)
	INTEGER*4 LNBMLT(NUMNBR)
	INTEGER*4 LNBOPT(NUMNBR)
	INTEGER*4 LNBTYP(NUMNBR)
	INTEGER*4 LNBPOL(NUMNBR)
	INTEGER*4 LNBRES(NUMNBR)
	INTEGER*4 LNBAPL(NUMNBR)
	INTEGER*4 LNBBRK(NUMNBR)
	INTEGER*4 LNBROL(NUMNBR)
	INTEGER*4 LNBREV(NUMNBR)
	INTEGER*4 LNBMAX(NUMNBR)
	INTEGER*4 LNBPRC(NUMNBR)
	INTEGER*4 LNBPER(NUMNBR)
        INTEGER*4 LNBBDR(NUMNBR)
	INTEGER*4 LNBTAX(NUMNBR)
C
C
C
	EQUIVALENCE(LNBSTS,LNBREC(LNBSTSOFF))
	EQUIVALENCE(LNBCTM,LNBREC(LNBCTMOFF))
	EQUIVALENCE(LNBTIM,LNBREC(LNBTIMOFF))
	EQUIVALENCE(LNBDRW,LNBREC(LNBDRWOFF))
	EQUIVALENCE(LNBBSD,LNBREC(LNBBSDOFF))
	EQUIVALENCE(LNBESD,LNBREC(LNBESDOFF))
	EQUIVALENCE(LNBPUP,LNBREC(LNBPUPOFF))
	EQUIVALENCE(LNBUPD,LNBREC(LNBUPDOFF))
	EQUIVALENCE(LNBDAT,LNBREC(LNBDATOFF))
	EQUIVALENCE(LNBADV,LNBREC(LNBADVOFF))
	EQUIVALENCE(LNBSAL,LNBREC(LNBSALOFF))
	EQUIVALENCE(LNBASL,LNBREC(LNBASLOFF))
	EQUIVALENCE(LNBWON,LNBREC(LNBWONOFF))
	EQUIVALENCE(LNBPAD,LNBREC(LNBPADOFF))
	EQUIVALENCE(LNBPRG,LNBREC(LNBPRGOFF))
	EQUIVALENCE(LNBPRZ,LNBREC(LNBPRZOFF))
	EQUIVALENCE(LNBWIN,LNBREC(LNBWINOFF))
	EQUIVALENCE(LNBHLD,LNBREC(LNBHLDOFF))
	EQUIVALENCE(LNBLIM,LNBREC(LNBLIMOFF))
	EQUIVALENCE(LNBSER,LNBREC(LNBSEROFF))
	EQUIVALENCE(LNBMLT,LNBREC(LNBMLTOFF))
	EQUIVALENCE(LNBOPT,LNBREC(LNBOPTOFF))
	EQUIVALENCE(LNBTYP,LNBREC(LNBTYPOFF))
	EQUIVALENCE(LNBPOL,LNBREC(LNBPOLOFF))
	EQUIVALENCE(LNBRES,LNBREC(LNBRESOFF))
	EQUIVALENCE(LNBAPL,LNBREC(LNBAPLOFF))
	EQUIVALENCE(LNBBRK,LNBREC(LNBBRKOFF))
	EQUIVALENCE(LNBROL,LNBREC(LNBROLOFF))
	EQUIVALENCE(LNBREV,LNBREC(LNBREVOFF))
	EQUIVALENCE(LNBMAX,LNBREC(LNBMAXOFF))
	EQUIVALENCE(LNBPRC,LNBREC(LNBPRCOFF))
	EQUIVALENCE(LNBPER,LNBREC(LNBPEROFF))
        EQUIVALENCE(LNBBDR,LNBREC(LNBBDROFF))
	EQUIVALENCE(LNBTAX,LNBREC(LNBTAXOFF))
