C LOGICAL NUMBERS GAME RECORD
C
C GAME VARIABLE ARRAYS
C
C     LNBSTS(NUMNBR)                       ;STATUS
C     LNBCTM(NUMNBR)                       ;ACTUAL TIME WHEN CLOSED
C     LNBTIM(NUMNBR)                       ;TIME WHEN GAME SHOULD CLOSE
C     LNBDRW(NUMNBR)                       ;DRAW NUMBER
C     LNBBSD(NUMNBR)                       ;NUMBERS BEGGINING DRAW DATE
C     LNBESD(NUMNBR)                       ;NUMBERS ENDING DRAW DATE
C     LNBPUP(NUMNBR)                       ;LAST PURGE UPDATE
C     LNBUPD(NUMNBR)                       ;LAST FILE UPDATE
C     LNBDAT(DATLEN,NUMNBR)                ;DRAW DATES
C     LNBADV(NUMADV,NUMNBR)                ;ADVANCE DRAW NUMBERS
C     LNBSAL(NUMTOT,NBGPOL,NUMNBR)         ;TOTAL SALES DATA
C     LNBASL(NUMTOT,NBGPOL,NUMNBR)         ;ADVANCE SALES DATA
C     LNBWON(NUMTOT,NBGPOL,2,NUMNBR)       ;WON BY POOL    (REGULAR,BONUS)
C     LNBPAD(NUMTOT,NBGPOL,2,NUMNBR)       ;PAID BY POOL   (REGULAR,BONUS)
C     LNBPRG(NUMTOT,NBGPOL,2,NUMNBR)       ;PURGED BY POOL (REGULAR,BONUS)
C     LNBPRZ(NBGPOL,2,NUMNBR)              ;PRIZE VALUES   (REGULAR,BONUS)
C     LNBWIN(NBGPOL,MAXBDR,NUMNBR)         ;WINNING NUMBERS BY POOL
C     LNBHLD(MAXBDR,NUMNBR)                ;WINNING NUMBERS HOLD
C     LNBLIM(3,NUMNBR)                     ;LIABILITY LIMITS
C     LNBSER(NUMNBR)                       ;LAST SERIAL NUMBER
C     LNBMLT(NUMNBR)                       ;MULTI-DRAW ENABLE FLAG
C     LNBOPT(NUMNBR)                       ;BETTING OPTIONS ENABLED FLAG
C     LNBTYP(NUMNBR)                       ;NUMBERS GAME TYPE
C     LNBPOL(NUMNBR)                       ;NUMBER OF POOLS
C     LNBRES(NUMNBR)                       ;RESERVE POOL
C     LNBAPL(NUMNBR)                       ;ADDITIONAL POOL
C     LNBBRK(NUMNBR)                       ;BREAKAGE
C     LNBROL(NUMNBR)                       ;ROLLOVER POOL
C     LNBREV(NUMNBR)                       ;REVISION NUMBER
C     LNBMAX(NUMNBR)                       ;MAXIMUM BETS/TKT
C     LNBPRC(NUMNBR)                       ;BASE PRICE
C     LNBPER(NUMNBR)                       ;POOL PERCENTAGE
C     LNBBDR(NUMNBR)                       ;# OF BONUS DRAWS ENABLED
C     LNBTAX(NUMNBR)                       ;WINNERS TAX
C
C LOGICAL GAME FILE VARIABLE FIELD OFFSETS
C
C
