!        INTEGER*4 RAF2CF_BITMAP5_OFF, RAF2CF_BITMAP6_OFF, RAF2CF_BITMAP7_OFF
        INTEGER*4 RAF2CF_TKTCHAR_OFF, RAF2CF_CTRLREV_OFF, RAF2CF_TEXTREV_OFF
        INTEGER*4 RAF2CF_TTXTREV_OFF, RAF2CF_IMRBEGI_OFF, RAF2CF_FREESPC_OFF
C
C SET UP RECORD FIELDS OFFSET VALUES
C
        PARAMETER (RAF2CF_GACTIVE_OFF = 1)                                      !FIELD 1
        PARAMETER (RAF2CF_GAMETYP_OFF = RAF2CF_GACTIVE_OFF + 1)                 !FIELD 2
        PARAMETER (RAF2CF_GAMEIND_OFF = RAF2CF_GAMETYP_OFF + 1)                 !FIELD 3
        PARAMETER (RAF2CF_XGAMNUM_OFF = RAF2CF_GAMEIND_OFF + 1)                 !FIELD 4
        PARAMETER (RAF2CF_GBPRICE_OFF = RAF2CF_XGAMNUM_OFF + 1)                 !FIELD 5
        PARAMETER (RAF2CF_SHGNAME_OFF = RAF2CF_GBPRICE_OFF + 1)                 !FIELD 6
        PARAMETER (RAF2CF_LNGNAME_OFF = RAF2CF_SHGNAME_OFF + 1)                 !FIELD 7
        PARAMETER (RAF2CF_FILNAME_OFF = RAF2CF_LNGNAME_OFF + 5)                 !FIELD 8
        PARAMETER (RAF2CF_GOPTSON_OFF = RAF2CF_FILNAME_OFF + 5)                 !FIELD 9
        PARAMETER (RAF2CF_GOPTCTR_OFF = RAF2CF_GOPTSON_OFF + 1)                 !FIELD 10
        PARAMETER (RAF2CF_JKACTIV_OFF = RAF2CF_GOPTCTR_OFF + 1)                 !FIELD 11
        PARAMETER (RAF2CF_DBJKFRE_OFF = RAF2CF_JKACTIV_OFF + 1)                 !FIELD 12
        PARAMETER (RAF2CF_NCURACT_OFF = RAF2CF_DBJKFRE_OFF + 1)                 !FIELD 13
        PARAMETER (RAF2CF_SMACTIV_OFF = RAF2CF_NCURACT_OFF + 1)                 !FIELD 14
        PARAMETER (RAF2CF_PNIFREQ_OFF = RAF2CF_SMACTIV_OFF + 1)                 !FIELD 15
        PARAMETER (RAF2CF_MAXBETS_OFF = RAF2CF_PNIFREQ_OFF + 1)                 !FIELD 16
        PARAMETER (RAF2CF_MAXFRAC_OFF = RAF2CF_MAXBETS_OFF + 1)                 !FIELD 17
        PARAMETER (RAF2CF_DBITMAP_OFF = RAF2CF_MAXFRAC_OFF + 1)                 !FIELD 18
!        PARAMETER (RAF2CF_BITMAP2_OFF = RAF2CF_BITMAP1_OFF + 1)                 !FIELD 19
!        PARAMETER (RAF2CF_BITMAP3_OFF = RAF2CF_BITMAP2_OFF + 1)                 !FIELD 20
!        PARAMETER (RAF2CF_BITMAP4_OFF = RAF2CF_BITMAP3_OFF + 1)                 !FIELD 21
!        PARAMETER (RAF2CF_BITMAP5_OFF = RAF2CF_BITMAP4_OFF + 1)                 !FIELD 22
!        PARAMETER (RAF2CF_BITMAP6_OFF = RAF2CF_BITMAP5_OFF + 1)                 !FIELD 23
!        PARAMETER (RAF2CF_BITMAP7_OFF = RAF2CF_BITMAP6_OFF + 1)                 !FIELD 24
        PARAMETER (RAF2CF_TKTCHAR_OFF = RAF2CF_DBITMAP_OFF + EMAXDBM)           !FIELD 19
        PARAMETER (RAF2CF_CTRLREV_OFF = RAF2CF_TKTCHAR_OFF + 1)                 !FIELD 20
        PARAMETER (RAF2CF_TEXTREV_OFF = RAF2CF_CTRLREV_OFF + 1)                 !FIELD 21
        PARAMETER (RAF2CF_TTXTREV_OFF = RAF2CF_TEXTREV_OFF + 1)                 !FIELD 22
        PARAMETER (RAF2CF_IMRBEGI_OFF = RAF2CF_TTXTREV_OFF + 1)                 !FIELD 23
        PARAMETER (RAF2CF_FREESPC_OFF = RAF2CF_IMRBEGI_OFF + 1)                 !FIELD 24
C
        INTEGER*4 RAF2CF_LEN
        PARAMETER (RAF2CF_LEN  = RAF2CF_FREESPC_OFF - 1)
C
        INTEGER*4 IRAF2CF_SEC
        PARAMETER (IRAF2CF_SEC = RAF2CF_LEN / 128 + 1)
C
        INTEGER*4 RAF2CF_SEC
        PARAMETER (RAF2CF_SEC  = IRAF2CF_SEC * 2)
C
        INTEGER*4 RAF2CF_FREESIZ                                                !RECORD FREE SIZE
        PARAMETER (RAF2CF_FREESIZ = RAF2CF_SEC * 64 - RAF2CF_LEN)
C
        INTEGER*4 RAF2CF_REC(RAF2CF_LEN + RAF2CF_FREESIZ)
        INTEGER*4 RAF2CF_GACTIVE                                                !GAME ACTIVE FLAG
        INTEGER*4 RAF2CF_GAMETYP                                                !GAME TYPE
        INTEGER*4 RAF2CF_GAMEIND                                                !GAME INDEX
        INTEGER*4 RAF2CF_XGAMNUM                                                !GAME NUMBER AT EUROMILLIONG BETTING SYSTEM
        INTEGER*4 RAF2CF_GBPRICE                                                !GAME BASE PRICE (WAGER UNITS)
        INTEGER*4 RAF2CF_SHGNAME                                                !SHORT GAME NAME (MAXIMUM OF 8 CHARACTERS)
        INTEGER*4 RAF2CF_LNGNAME(5)                                             !LONG GAME NAME (MAXIMUM OF 20 CHARACTERS)
        INTEGER*4 RAF2CF_FILNAME(5)                                             !CONFIGURATION FILE NAME
        INTEGER*4 RAF2CF_GOPTSON                                                !GAME OPTION FLAGS AT SON
        INTEGER*4 RAF2CF_GOPTCTR                                                !GAME OPTION FLAGS AT CONTROL REQUEST
        INTEGER*4 RAF2CF_JKACTIV                                                !JOKER ACTIVE FOR THIS GAME FLAG
        INTEGER*4 RAF2CF_DBJKFRE                                                !DOUBLE JOKER FREE
        INTEGER*4 RAF2CF_NCURACT                                                !GAME NOT CURRENTLY ACTIVE
        INTEGER*4 RAF2CF_SMACTIV                                                !SM GAME STANDALONE FLAG
        INTEGER*4 RAF2CF_PNIFREQ                                                !PLAYER NIF REQUIRED FLAG
        INTEGER*4 RAF2CF_MAXBETS                                                !MAXIMUM BET LIMIT (STANDALONE ONLY)
        INTEGER*4 RAF2CF_MAXFRAC                                                !MAXIMUM NUMBER OF FRACTIONS
        INTEGER*4 RAF2CF_DBITMAP(EMAXDBM)                                       !SINGLE DRAW WAGERING ALWAYS ALLOWED (*MSB = 1 DRAW) *MSB: MOST SIGNIFICANT BYTE + 6 MULTI-DRAW POSSIBILITIES
!        INTEGER*4 RAF2CF_BITMAP1                                                !SINGLE DRAW WAGERING ALWAYS ALLOWED (*MSB = 1 DRAW) *MSB: MOST SIGNIFICANT BYTE
!        INTEGER*4 RAF2CF_BITMAP2                                                !MULTI-DRAW POSSIBILITY 1 OF 6 (MAXIMUM NUMBER OF MULTI DRAWS SELECTABLE IS 6)
!        INTEGER*4 RAF2CF_BITMAP3                                                !MULTI-DRAW POSSIBILITY 2 OF 6 (MULTI-DRAW IS POSSIBLE UP TO 52 DRAWS)
!        INTEGER*4 RAF2CF_BITMAP4                                                !MULTI-DRAW POSSIBILITY 3 OF 6 (MULTI-DRAW POSSIBILITIES, IN ASCENDING ORDER, WOULD BE E.G., 1 WEEK, 2 WEEKS, 3 WEEKS, 5 WEEKS AND 52 WEEKS)
!        INTEGER*4 RAF2CF_BITMAP5                                                !MULTI-DRAW POSSIBILITY 4 OF 6
!        INTEGER*4 RAF2CF_BITMAP6                                                !MULTI-DRAW POSSIBILITY 5 OF 6
!        INTEGER*4 RAF2CF_BITMAP7                                                !MULTI-DRAW POSSIBILITY 6 OF 6
        INTEGER*4 RAF2CF_TKTCHAR                                                !TICKET CHARGE
        INTEGER*4 RAF2CF_CTRLREV                                                !CONTROL REVISION
        INTEGER*4 RAF2CF_TEXTREV                                                !TEXT REVISION
        INTEGER*4 RAF2CF_TTXTREV                                                !TICKET TEXT REVISION
        INTEGER*4 RAF2CF_IMRBEGI                                                !MINIMUM NUMBER OF RAFFLES FROM WHICH THE RAFFLE NUMBERS HAVE TO BE PRINTED IN THE WAGER TICKET USING INTERVAL MODE REPRESENTATION (IMR) FIELD OFFSET
        INTEGER*4 RAF2CF_FREESPC(RAF2CF_FREESIZ)                                !RECORD FREE SPACE
C
        EQUIVALENCE (RAF2CF_GACTIVE   , RAF2CF_REC(RAF2CF_GACTIVE_OFF))
        EQUIVALENCE (RAF2CF_GAMETYP   , RAF2CF_REC(RAF2CF_GAMETYP_OFF))
        EQUIVALENCE (RAF2CF_GAMEIND   , RAF2CF_REC(RAF2CF_GAMEIND_OFF))
        EQUIVALENCE (RAF2CF_XGAMNUM   , RAF2CF_REC(RAF2CF_XGAMNUM_OFF))
        EQUIVALENCE (RAF2CF_GBPRICE   , RAF2CF_REC(RAF2CF_GBPRICE_OFF))
        EQUIVALENCE (RAF2CF_SHGNAME   , RAF2CF_REC(RAF2CF_SHGNAME_OFF))
        EQUIVALENCE (RAF2CF_LNGNAME(1), RAF2CF_REC(RAF2CF_LNGNAME_OFF))
        EQUIVALENCE (RAF2CF_FILNAME(1), RAF2CF_REC(RAF2CF_FILNAME_OFF))
        EQUIVALENCE (RAF2CF_GOPTSON   , RAF2CF_REC(RAF2CF_GOPTSON_OFF))
        EQUIVALENCE (RAF2CF_GOPTCTR   , RAF2CF_REC(RAF2CF_GOPTCTR_OFF))
        EQUIVALENCE (RAF2CF_JKACTIV   , RAF2CF_REC(RAF2CF_JKACTIV_OFF))
        EQUIVALENCE (RAF2CF_DBJKFRE   , RAF2CF_REC(RAF2CF_DBJKFRE_OFF))
        EQUIVALENCE (RAF2CF_NCURACT   , RAF2CF_REC(RAF2CF_NCURACT_OFF))
        EQUIVALENCE (RAF2CF_SMACTIV   , RAF2CF_REC(RAF2CF_SMACTIV_OFF))
        EQUIVALENCE (RAF2CF_PNIFREQ   , RAF2CF_REC(RAF2CF_PNIFREQ_OFF))
        EQUIVALENCE (RAF2CF_MAXBETS   , RAF2CF_REC(RAF2CF_MAXBETS_OFF))
        EQUIVALENCE (RAF2CF_MAXFRAC   , RAF2CF_REC(RAF2CF_MAXFRAC_OFF))
        EQUIVALENCE (RAF2CF_DBITMAP(1), RAF2CF_REC(RAF2CF_DBITMAP_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP1   , RAF2CF_REC(RAF2CF_BITMAP1_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP2   , RAF2CF_REC(RAF2CF_BITMAP2_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP3   , RAF2CF_REC(RAF2CF_BITMAP3_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP4   , RAF2CF_REC(RAF2CF_BITMAP4_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP5   , RAF2CF_REC(RAF2CF_BITMAP5_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP6   , RAF2CF_REC(RAF2CF_BITMAP6_OFF))
!        EQUIVALENCE (RAF2CF_BITMAP7   , RAF2CF_REC(RAF2CF_BITMAP7_OFF))
        EQUIVALENCE (RAF2CF_TKTCHAR   , RAF2CF_REC(RAF2CF_TKTCHAR_OFF))
        EQUIVALENCE (RAF2CF_CTRLREV   , RAF2CF_REC(RAF2CF_CTRLREV_OFF))
        EQUIVALENCE (RAF2CF_TEXTREV   , RAF2CF_REC(RAF2CF_TEXTREV_OFF))
        EQUIVALENCE (RAF2CF_TTXTREV   , RAF2CF_REC(RAF2CF_TTXTREV_OFF))
        EQUIVALENCE (RAF2CF_IMRBEGI   , RAF2CF_REC(RAF2CF_IMRBEGI_OFF))
        EQUIVALENCE (RAF2CF_FREESPC(1), RAF2CF_REC(RAF2CF_FREESPC_OFF))
C
C       OPTION FLAGS FOR SIGN-ON AND CONTROL REQUEST MESSAGES
C
        INTEGER*2  SMACTI_OPT                                                   !SM GAME ACTIVE FOR THIS GAME
        PARAMETER (SMACTI_OPT = '1000'X)
        INTEGER*2  NIFWAG_OPT                                                   !PLAYER NIF NECESSARY FOR WAGERING THIS GAME (SM)
        PARAMETER (NIFWAG_OPT = '0800'X)
        INTEGER*2  BETLIM_OPT                                                   !MAX BET LIMIT PRESENT
        PARAMETER (BETLIM_OPT = '0040'X)
        INTEGER*2  MDRBIT_OPT                                                   !MULTI-DRAW BITMAP PRESENT
        PARAMETER (MDRBIT_OPT = '0010'X)
        INTEGER*2  CTRREV_OPT                                                   !CONTROL REVISION PRESENT
        PARAMETER (CTRREV_OPT = '0004'X)
C
C END RECRAF2CF.DEF
