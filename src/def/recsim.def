        INTEGER*4 LOTER_OFF,HITER_OFF,SIGON_OFF,MTOTNR_OFF
        INTEGER*4 MPERQP_OFF,MNREGBRD_OFF,NODISP_OFF,DELY_OFF
        INTEGER*4 MDRWMAX_OFF,MBRDMAX_OFF,RETRY_OFF,INCAN_OFF
        INTEGER*4 MANCHG_OFF,MCYCLE_OFF,MSQP_OFF,MVSENT_OFF
        INTEGER*4 MGNUM_OFF,TRATYP_OFF
        INTEGER*4 TRASUB_OFF,MJOK_OFF,SYSBET_OFF,SYSBNUM_OFF
        INTEGER*4 BANK_OFF,BANKID_OFF,BANKACC_OFF,TELEBET_OFF
        INTEGER*4 PASS_OFF,SERIALEM_OFF,SERIALEMNR_OFF,SERIALEMCC_OFF
        INTEGER*4 SIMFREE_OFF
C
        PARAMETER(LOTER_OFF    = 1)
        PARAMETER(HITER_OFF    = LOTER_OFF  + 1)
        PARAMETER(SIGON_OFF    = HITER_OFF  + 1)
        PARAMETER(MTOTNR_OFF   = SIGON_OFF + 1)
        PARAMETER(MPERQP_OFF   = MTOTNR_OFF + MAXGAM)
        PARAMETER(MNREGBRD_OFF = MPERQP_OFF + MAXGAM)
        PARAMETER(NODISP_OFF   = MNREGBRD_OFF + MAXGAM)
        PARAMETER(DELY_OFF     = NODISP_OFF + 1)
        PARAMETER(MDRWMAX_OFF  = DELY_OFF + 1)
        PARAMETER(MBRDMAX_OFF  = MDRWMAX_OFF + MAXGAM)
        PARAMETER(RETRY_OFF    = MBRDMAX_OFF + MAXGAM)
        PARAMETER(INCAN_OFF    = RETRY_OFF + 1)
        PARAMETER(MANCHG_OFF   = INCAN_OFF + 1)
        PARAMETER(MCYCLE_OFF   = MANCHG_OFF + 1)
        PARAMETER(MSQP_OFF     = MCYCLE_OFF + MAXGAM)
        PARAMETER(MVSENT_OFF   = MSQP_OFF + MAXGAM)
        PARAMETER(MGNUM_OFF    = MVSENT_OFF + MAXGAM)
        PARAMETER(TRATYP_OFF   = MGNUM_OFF + 1)
        PARAMETER(TRASUB_OFF   = TRATYP_OFF + 1)
        PARAMETER(MJOK_OFF     = TRASUB_OFF + 1)
        PARAMETER(SYSBET_OFF   = MJOK_OFF + MAXGAM)
        PARAMETER(SYSBNUM_OFF  = SYSBET_OFF + 1)
        PARAMETER(BANK_OFF     = SYSBNUM_OFF + 1)
        PARAMETER(BANKID_OFF   = BANK_OFF + 1)
        PARAMETER(BANKACC_OFF  = BANKID_OFF + 1)
        PARAMETER(TELEBET_OFF  = BANKACC_OFF + 1)
        PARAMETER(PASS_OFF     = TELEBET_OFF + 1)
        PARAMETER(SERIALEM_OFF = PASS_OFF + 1)
        PARAMETER(SERIALEMNR_OFF = SERIALEM_OFF + 1)
        PARAMETER(SERIALEMCC_OFF = SERIALEMNR_OFF + 1)
        PARAMETER(SIMFREE_OFF  = SERIALEMCC_OFF + 1)
C
        INTEGER*4 SIMLEN
        PARAMETER(SIMLEN = SIMFREE_OFF-1)
C
        INTEGER*4 ISIMSEC
        PARAMETER(ISIMSEC = SIMLEN/128 + 1)
C
        INTEGER*4 SIMSEC
        PARAMETER(SIMSEC = ISIMSEC*2)
C
        INTEGER*4 SIMFRESIZ
        PARAMETER(SIMFRESIZ = SIMSEC*64 - SIMLEN)
C
        INTEGER*4 SIMFREE(SIMFRESIZ)
C
        INTEGER*4 SIMREC(SIMSEC*64)

        INTEGER*4 LOTER                         !LOW TERMINAL
        INTEGER*4 HITER                         !HIGH TERMINAL
        INTEGER*4 SIGON                         !SIGNON Y/N
        INTEGER*4 MTOTNR(MAXGAM)                !# OF WAGERS
        INTEGER*4 MPERQP(MAXGAM)                !% OF QP
        INTEGER*4 MNREGBRD(MAXGAM)              !# OF REGULAR BOARDS
        INTEGER*4 NODISP                        !WAGER DISPLAY Y/N
        INTEGER*4 DELY                          !DELAY BTWN MSGS (MS)
        INTEGER*4 MDRWMAX(MAXGAM)               !DRAW LIMIT
        INTEGER*4 MBRDMAX(MAXGAM)               !BOARDS LIMIT
        INTEGER*4 RETRY                         !RETRY Y/N
        INTEGER*4 INCAN                         !TERM DELETION Y/N
        INTEGER*4 MANCHG                        !MANUAL CHANGES Y/N
        INTEGER*4 MCYCLE(MAXGAM)                !CYCLIC/RANDOM CMBS
        INTEGER*4 MSQP(MAXGAM)                  !QP TYPE
        INTEGER*4 MVSENT(MAXGAM)                !BONUS SENT Y/N
        INTEGER*4 MGNUM                         !GAME NUMBER
        INTEGER*4 TRATYP                        !TRANSACTION TYPE
        INTEGER*4 TRASUB                        !TRANSACTION SUBTYP
        INTEGER*4 MJOK(MAXGAM)                  !JOKER PRESENT  
        INTEGER*4 SYSBET                        !SYSTEM BET
        INTEGER*4 SYSBNUM                       !SYSTEM BET NUMBER
        INTEGER*4 BANK                          !BANK ATTRIBUTES PRESENT
        INTEGER*4 BANKID                        !BANK ID
        INTEGER*4 BANKACC                       !BANK ACCOUNT
        INTEGER*4 TELEBET                       !TELEBET
        INTEGER*4 PASSFLG                       !PASSIVE VALIDATION
        INTEGER*4 SERIALEM                      !SERIAL NUMBER EM PRESENT
        INTEGER*4 SERIALEM_NR                   !SERIAL NUMBER EM
        INTEGER*4 SERIALEM_CC                   !CHECK DIGITS SERIAL NUMBER EM
C
        EQUIVALENCE (SIMREC(LOTER_OFF),LOTER)
        EQUIVALENCE(SIMREC(HITER_OFF),HITER)
        EQUIVALENCE(SIMREC(SIGON_OFF),SIGON)
        EQUIVALENCE(SIMREC(MTOTNR_OFF),MTOTNR)
        EQUIVALENCE(SIMREC(MPERQP_OFF),MPERQP)
        EQUIVALENCE(SIMREC(MNREGBRD_OFF),MNREGBRD)
        EQUIVALENCE(SIMREC(NODISP_OFF),NODISP)
        EQUIVALENCE(SIMREC(DELY_OFF),DELY)
        EQUIVALENCE(SIMREC(MDRWMAX_OFF),MDRWMAX)
        EQUIVALENCE(SIMREC(MBRDMAX_OFF),MBRDMAX)
        EQUIVALENCE(SIMREC(RETRY_OFF),RETRY)
        EQUIVALENCE(SIMREC(INCAN_OFF),INCAN)
        EQUIVALENCE(SIMREC(MANCHG_OFF),MANCHG)
        EQUIVALENCE(SIMREC(MCYCLE_OFF),MCYCLE)
        EQUIVALENCE(SIMREC(MSQP_OFF),MSQP)
        EQUIVALENCE(SIMREC(MVSENT_OFF),MVSENT)
        EQUIVALENCE(SIMREC(MGNUM_OFF),MGNUM)
        EQUIVALENCE(SIMREC(TRATYP_OFF),TRATYP)
        EQUIVALENCE(SIMREC(TRASUB_OFF),TRASUB)
        EQUIVALENCE(SIMREC(MJOK_OFF),MJOK)                
        EQUIVALENCE(SIMREC(SYSBET_OFF),SYSBET) 
        EQUIVALENCE(SIMREC(SYSBNUM_OFF),SYSBNUM) 
        EQUIVALENCE(SIMREC(BANK_OFF),BANK) 
        EQUIVALENCE(SIMREC(BANKID_OFF),BANKID) 
        EQUIVALENCE(SIMREC(BANKACC_OFF),BANKACC) 
        EQUIVALENCE(SIMREC(TELEBET_OFF),TELEBET)
        EQUIVALENCE(SIMREC(PASS_OFF),PASSFLG) 
        EQUIVALENCE(SIMREC(SERIALEM_OFF),SERIALEM) 
        EQUIVALENCE(SIMREC(SERIALEMNR_OFF),SERIALEM_NR) 
        EQUIVALENCE(SIMREC(SERIALEMCC_OFF),SERIALEM_CC) 
        EQUIVALENCE(SIMREC(SIMFREE_OFF),SIMFREE)        
