C CONSTANT VARIABLES DEFINITION ( GENERAL )
C
      INTEGER * 4 TOTSPOS, MAXTSAL, MTMFIL, GAMFIL, DAFFIL
C
      PARAMETER(TOTSPOS = MAXGAM + 1)      ! TOTAL SALES POSITION
      PARAMETER(MAXTSAL = 8)               ! MAXIMUM SALES ( COUNTER / AMOUNT ) 
      PARAMETER(MTMFIL = 1)                ! TRANSACTION MASTER FILE TYPE
      PARAMETER(GAMFIL = 2)                ! GAME FILE TYPE
      PARAMETER(DAFFIL = 3)                ! DAF FILE TYPE
C
C VARIABLES DEFINITON FOR TRANSACTION LOADER 
C
      REAL * 8 TOTSAL(TOTSPOS, MAXTSAL)    ! SALES ( COUNTER / AMOUNT )
C
      INTEGER * 4 TRNTYP                   ! TRANSACTION TYPE
C
C DEFINE COMMON AREAS FOR TRANSACTION LOADER
C
      COMMON / GSALESCOM / TOTSAL          ! SALES COUNTER / SALES AMOUNT 
      COMMON / GSALESCOM / TRNTYP          ! TRANSACTION TYPE
C
C VARIABLES DEFINITION TO DRAWS DRAW LOADER ( PARAMETERS )
C
      INTEGER * 4 TOTTCKON, TOTTCKOF, TOTAMTON, TOTAMTOF, TOTDRWSIZE
C
      PARAMETER(TOTTCKON = 1)              ! TOTAL TICKET NUMBER ( ON + OFF )
      PARAMETER(TOTTCKOF = TOTTCKON + 1)   ! TOTAL TIECET NUMBER OFF LINE
      PARAMETER(TOTAMTON = TOTTCKOF + 1)   ! TOTAL AMOUNT ( ON + OFF )
      PARAMETER(TOTAMTOF = TOTAMTON + 1)   ! TOTAL AMOUNT OFF LINE
      PARAMETER(TOTDRWSIZE = TOTAMTOF)     ! SIZE OF TOTAL DRAW VARIABLES
C
      INTEGER * 4 TOTDRW(TOTDRWSIZE)       ! TOTAL DRAW ( COUNTER / AMOUNTS )
C
C DEFINE COMMON AREAS FOR DRAWS DRAW LOADER
C
      COMMON / GSALESCOM / TOTDRW          ! TOTAL DRAW ( COUNTER / AMOUNTS )
C
C VARIABLES DEFINITON TO COMMON AREAS ( FILE MAGANER VARIABLES )
C
      INTEGER * 4 IDFIL        ! IDENTIFICATION FILE FOR GSALES LOADER
      INTEGER * 4 FILRECCNT    ! FILE RECORD COUNTER ( NUMBER OF WRITE RECORDS )
      INTEGER * 4 FILRECLNG    ! FILE RECORD LENGTH
C
      CHARACTER * 2048 FILREC  ! FILE RECORD ( BUFFER )
C
C DEFINE COMMON AREAS ( FILE MAGANER VARIABLES )
C
      COMMON / GSALESCOM / FILRECCNT,          ! FILE RECORD COUNTER
     *                     FILRECLNG,          ! FILE RECORD LENGTH
     *                     IDFIL               ! IDENTIFICATION FILE
C
      COMMON / GSALESCOM / FILREC              ! FILE RECORD
C
C GET_YYYYMMDD_CDC FUNCTION GETS YYYYDDMM FORMATED DATE STARTING FROM CDC
C
      CHARACTER * 08 GET_YYYYMMDD_CDC
      EXTERNAL GET_YYYYMMDD_CDC
C
C GET_YYYYMMDD_CDC FUNCTION GETS ACTUAL DATE HOUR 
C
      CHARACTER * 17 GET_ACT_DATE_HOUR
      EXTERNAL GET_ACT_DATE_HOUR
C
C GET_HHMMSS_TIME FUNCTION GETS HHMMSS TIME STARTING FROM TIME IN SECONDS
C
      CHARACTER * 6 GET_HHMMSS_TIME
      EXTERNAL GET_HHMMSS_TIME
C
C GET_FREE_IDFIL FUNCTION GET ONE FREE IDENTIFICATION FILE NUMBER
C
      INTEGER * 4 GET_FREE_IDFIL
      EXTERNAL GET_FREE_IDFIL
C
C GET_JULIAN_CDC CALCULATE JULIAN VALUE STARTING FROM CDC
C
      INTEGER * 4 GET_JULIAN_CDC
      EXTERNAL GET_JULIAN_CDC
C
C CHECK_PASSIVE_STATUS CHECK IF PASSIVE TRANSACTION STATUS IS OK OR NOT
C
      LOGICAL CHECK_PASSIVE_STATUS
      EXTERNAL CHECK_PASSIVE_STATUS
C
C FRAMT CALCULATE FRACTIONAL SHARE AMOUNT FROM # OF FRACTIONS PAID
C
      INTEGER * 4 FRAMT
      EXTERNAL FRAMT
C
C PRNT_AMT FUNCTION TO PRINT GSALES AMOUNTS WITH 2 OR FOUR DECIMALS
C
      CHARACTER * 12 PRNT_AMT
      EXTERNAL PRNT_AMT
C 
