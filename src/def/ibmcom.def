	INTEGER*4  MAXBLK
	PARAMETER (MAXBLK=8192)   !MAX LENGTH OF TAPE BLOCK IN BYTES
	INTEGER*4  EXPDTE
	PARAMETER (EXPDTE=  14)	  !Tape Expires after # days.
C
	CHARACTER TAPBUF*8192     !AS MUCH AS MAXBLK
C
	CHARACTER LABEL*80
	INTEGER*4 I4LABEL(20)
	EQUIVALENCE (LABEL,I4LABEL)
C
	CHARACTER TAPSR1*6
	CHARACTER TODDAT*6
	CHARACTER TAPDSN*18
	CHARACTER EXPDAT*6
	CHARACTER*2 TAPFMT
	CHARACTER*6 TAPSRC
	INTEGER*4 NUMBLK,TOTRECS
	INTEGER*4 TAPWRD(MAXBLK/4),LABWRD(80)
	EQUIVALENCE (TAPWRD(1),TAPBUF)
	EQUIVALENCE (LABWRD(1),LABEL)
C
	INTEGER*4 TAPFDB(7)
C
	INTEGER*4 NUMREC, MXREC, SEQNUM, TAPBLN, TAPRLN, TAPEVF
	INTEGER*4 TAPDRV, TAPLUN
C
C
C
C
	COMMON /IBMTAP/ TAPFDB,TAPLUN,TAPDRV,TAPEVF,TAPRLN,TAPBLN,
     *	           SEQNUM,MXREC,NUMBLK,NUMREC,LABEL,TAPBUF,TOTRECS,
     *	           TODDAT,TAPDSN,TAPSRC,TAPSR1,TAPFMT,EXPDAT
C
C     TAPFDB= 7 WORD ARRAY CONTAINING STATUS INFO SET UP BY TAPEIO
C     TAPLUN= LOGICAL UNIT # TO ATTACH TO TAPE
C     TAPDRV= DRIVE ON WHICH TAPE IS MOUNTED
C     TAPDSN= DATA SET NAME TO PUT IN HDR1 LABEL
C             (ALTHOUGH 18 BYTES, ONLY 1-17 ARE USED)
C     TAPRLN= LENGTH OF LOGICAL RECORD IN DATA SECTION (BYTES)
C     TAPBLN= LENGTH OF PHYSICAL BLOCK IN DATA SECTION (BYTES)
C             (MUST BE A MULTIPLE OF TAPRLN)
C     TAPEVF= EVENT FLAG TO USE TO WAIT FOR I/O (LOCAL FLAG)
C     TAPSR1= VOLUME SERIAL NUMBER (6-ALPHANUMERIC) OF THE FIRST
C             VOLUME IN A MULTI-VOLUME SET.
C     TAPSRC= VOLUME SERIAL NUMBER (6-ALPHANUMERIC) OF THE CURRENT
C             VOLUME
C     NUMBLK= NUMBER OF DATA BLOCKS OUTPUT SO FAR ON CURRENT TAPE
C     TOTRECS=TOTAL RECORDS WRITTEN TO TAPE
C     NUMREC= NUMBER OF RECORDS SO FAR IN TAPBUF.  WHEN EQUAL TO
C             TAPBLN/TAPRLN, TAPBUF IS WRITTEN TO TAPE.
C     TODDAT= TODAY'S JULIAN DATE IN ASCII (" YYDDD")
C     EXPDAT= TAPE EXPIRATION DATE -"-     (" YYDDD")
C     SEQNUM= SEQUENCE NUMBER OF CURRENT TAPE IN MULTI-VOLUME
C             SITUATION (0001-9999)
C     MXREC= THE NUMBER OF RECORDS PER BLOCK. (TAPBLN/TAPRLN)
C     TAPFMT= IBM TAPE FORMAT 'OS' OR 'DO'(DOS)
C     TAPBUF= TAPE BUFFER.  MUST BE AT LEAST AS LONG AS TAPBLN.
C             MAY BE REFERENCED AS TAPBUF(BYTES) OR TAPWRD(WORDS).
C
C             A BLOCKS OUTPUT SO FAR ON CURRENT TAPE
C
C     NUMREC= NUMBER OF RECORDS SO FAR IN TAPBUF.  WHEN EQUAL TO
C             TAPBLN/TAPRLN, TAPBUF IS WRITTEN TO TAPE.
C     TODDAT= TODAY'S JULIAN DATE IN ASCII (" YYDDD")
C     SEQNUM= SEQUENCE NUMBER OF CURRENT TAPE IN MULTI-VOLUME
