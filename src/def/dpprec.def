C
C OFFSET PARAMETERS
C
	INTEGER*4 DPPSHVOFF,DPPEXSHVOFF
	PARAMETER(DPPSHVOFF   = 1)
	PARAMETER(DPPEXSHVOFF = DPPSHVOFF + 2*PAGDIV)

	INTEGER*4 DPPPLANOFF, DPPNUMTCKOFF, DPPPRCOFF
	PARAMETER(DPPPLANOFF   = DPPEXSHVOFF + 2*PAGEDV)
	PARAMETER(DPPNUMTCKOFF = DPPPLANOFF + 1)
	PARAMETER(DPPPRCOFF    = DPPNUMTCKOFF + 1)

	INTEGER*4 DPPDIVOFF,DPPPLTOFF,DPPWNUMOFF
	PARAMETER(DPPDIVOFF  = DPPPRCOFF + 1)
	PARAMETER(DPPPLTOFF  = DPPDIVOFF + 1)
	PARAMETER(DPPWNUMOFF = DPPPLTOFF + 1)	

	INTEGER*4 DPPSHROFF,DPPTYPOFF
	PARAMETER(DPPSHROFF = DPPWNUMOFF + PAGDIV)
	PARAMETER(DPPTYPOFF = DPPSHROFF  + PAGDIV)

	INTEGER*4 DPPDIGOFF,DPPIDNUMOFF
	PARAMETER(DPPDIGOFF    = DPPTYPOFF + PAGDIV)
	PARAMETER(DPPIDNUMOFF  = DPPDIGOFF + PAGDIV)

	INTEGER*4 DPPEXSHROFF
	PARAMETER(DPPEXSHROFF = DPPIDNUMOFF + PAGDIV)

	INTEGER*4 DPPCHGCDCOFF,DPPNOFFRAOFF
	PARAMETER(DPPCHGCDCOFF = DPPEXSHROFF  + PAGEDV)
        PARAMETER(DPPNOFFRAOFF = DPPCHGCDCOFF + 1)

	INTEGER*4 DPPFREOFF
        PARAMETER(DPPFREOFF=DPPNOFFRAOFF+1)
C
C PASSIVE LOTTERY PLAN RECORD DEFINITION
C
	INTEGER*8 DPPSHV(PAGDIV)		!SHARE VALUE
	INTEGER*8 DPPEXSHV(PAGEDV)		!EXTRA SHARE VALUE
	INTEGER*4 DPPPLAN			!EMISSION PLAN
	INTEGER*4 DPPNUMTCK			!NUMBER OF TICKETS
	INTEGER*4 DPPPRC			!BASE PRICE
	INTEGER*4 DPPDIV			!NUMBER OF DIVISIONS
	INTEGER*4 DPPPLT			!PLAN TYPE (CLAS/POP/EXTRA/SPEC)
	INTEGER*4 DPPWNUM(PAGDIV)		!NUMBER OF WIN. NO.
	INTEGER*4 DPPSHR(PAGDIV)		!SHARES
	INTEGER*4 DPPTYP(PAGDIV)		!PRIZE TYPE
	INTEGER*4 DPPDIG(PAGDIV)		!# OF DIGITS
	INTEGER*4 DPPIDNUM(PAGDIV)		!CROSS REFERENCE
	INTEGER*4 DPPEXSHR(PAGEDV)		!EXTRA SHARES
        INTEGER*4 DPPCHGCDC       		!LAST CHANGE DATE
        INTEGER*4 DPPNOFFRA       		!NUMBER OF FRACTIONS
C
C DETERMINE RECORD & SECTOR LENGTHS
C SECTOR SIZE MUST BE MULTIPLE OF 2
C
	INTEGER*4 DPPSEC          !SECTOR SIZE
	PARAMETER(DPPSEC=INT(DPPFREOFF/64)+1 +
     *            MOD(INT(DPPFREOFF/64)+1,2))	!MAKE DPPSEC EVEN
	INTEGER*4 DPPLEN			!LENGTH OF DPP RECORD 
	PARAMETER(DPPLEN=64*DPPSEC)

	INTEGER*4 DPPREC(DPPLEN)

	INTEGER*4 DPP_FREE_SPACE        !SPACE LEFT IN DPP RECORD
	PARAMETER(DPP_FREE_SPACE=DPPLEN-DPPFREOFF+1)
	INTEGER*4 DPPFRE(DPP_FREE_SPACE)
C
C EQUIVALENCES
C       
	EQUIVALENCE(DPPSHV,   DPPREC(DPPSHVOFF))
	EQUIVALENCE(DPPEXSHV, DPPREC(DPPEXSHVOFF))
	EQUIVALENCE(DPPPLAN,  DPPREC(DPPPLANOFF))
	EQUIVALENCE(DPPNUMTCK,DPPREC(DPPNUMTCKOFF))
	EQUIVALENCE(DPPPRC,   DPPREC(DPPPRCOFF))
	EQUIVALENCE(DPPDIV,   DPPREC(DPPDIVOFF))
	EQUIVALENCE(DPPPLT,   DPPREC(DPPPLTOFF))
	EQUIVALENCE(DPPWNUM,  DPPREC(DPPWNUMOFF))
	EQUIVALENCE(DPPSHR,   DPPREC(DPPSHROFF))
	EQUIVALENCE(DPPTYP,   DPPREC(DPPTYPOFF))
	EQUIVALENCE(DPPDIG,   DPPREC(DPPDIGOFF))
	EQUIVALENCE(DPPIDNUM, DPPREC(DPPIDNUMOFF))
	EQUIVALENCE(DPPEXSHR, DPPREC(DPPEXSHROFF))
	EQUIVALENCE(DPPCHGCDC,DPPREC(DPPCHGCDCOFF))
	EQUIVALENCE(DPPNOFFRA,DPPREC(DPPNOFFRAOFF))
	EQUIVALENCE(DPPFRE,   DPPREC(DPPFREOFF))
C
C END OF DPPREC.DEF
C
