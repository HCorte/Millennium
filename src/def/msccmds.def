C
C Purpose:
C	DEFINITION OF COMMANDS ISSUED TO TELENEX MATRIX SWITCH CONTROLLER.
C
C++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
C
C SET PAGE LENGTH COMMAND WILL DETERMINE THE NUMBER OF RESPONSES/PACKET THE
C MSC WILL SEND TO HOST.
C
	CHARACTER*10  SET_PAGE_LENGTH
	   PARAMETER (SET_PAGE_LENGTH = 'SET PAGE')
C
C POLL COMMANDS TO BE USED TO SOLICIT RESPONSES FROM MSC.
C
	CHARACTER*2 STATUS_POLL, ALARM_POLL, CMD_POLL, GEN_POLL
	   PARAMETER (STATUS_POLL = 'ST')   ! REQUEST FOR MSC STATUS
	   PARAMETER (ALARM_POLL  = 'AL')   ! REQUEST FOR ALARM
	   PARAMETER (CMD_POLL    = 'RP')   ! REQUEST FOR COMMAND RESPONSE
	   PARAMETER (GEN_POLL    = 'PL')   ! GENERAL REQUEST
C
C DISPLAY COMMANDS USED TO GET SWITCH CONFIGURATION
C
        CHARACTER*24 GET_CONFIG
	   PARAMETER (GET_CONFIG = 'DISPLAY CONNECT PORTS')
C
C ENABLE ALARM COMMAND WILL ARM ALARM REPORTING ON THE SPECIFIED PORT.
C
	CHARACTER*10 ENABLE_ALARM
	   PARAMETER(ENABLE_ALARM='ARM PORT')
C
C NEXT PAGE COMMAND USED TO GET NEXT PAGE OF MULTI-PAGE RESPONSE.
C
	CHARACTER*2 NEXT_PAGE
	   PARAMETER (NEXT_PAGE = 'DN')
C	
C STATUS COMMANDS ARE USED TO CHANGE CONNECTION STATUS MSC<-->HOST
C    (SEE MSCRCVBUF.FOR)
C
	CHARACTER*2 GO_ONLINE, GO_OFFLINE
	   PARAMETER (GO_ONLINE = 'ON')
	   PARAMETER (GO_OFFLINE = 'OF')
        CHARACTER*6 LOGON
	   PARAMETER (LOGON = 'LOGON')
        CHARACTER*14 SELECT, START
	   PARAMETER (SELECT = 'SELECT SWITCH')
	   PARAMETER (START = 'START SWITCH')
C
C APPLICATION COMMANDS
C
	INTEGER*4 MSC_NUM_CMDS, MSC_MAX_PARMS, MSC_CMD_LEN, MSC_CMD_LENB
	   PARAMETER (MSC_NUM_CMDS = 3)        !CURRENT # OF MSC COMMANDS
	   PARAMETER (MSC_MAX_PARMS = 5)       !MAX # OF PARMS PER COMMAND
	   PARAMETER (MSC_CMD_LEN = 6)         !MAX CMD LEN IN CHAR*8/REAL*8
	   PARAMETER (MSC_CMD_LENB = MSC_CMD_LEN*8)!COMMAND LEN IN BYTES
C
C THE FOLLOWING IS A LIST OF APPLICATION COMMAND STRINGS 
C TO BE USED WHEN BUILDING SWITCH COMMANDS FOR THE MSC. 
C ('?' WILL BE REPLACED WITH DYNAMIC VALUES)
C
	INTEGER*4 CONNECT_PORT, CONNECT_GROUP, CONNECT_SUPER, UPDSTS
	   PARAMETER (CONNECT_PORT  = 1)
	   PARAMETER (CONNECT_GROUP = 2)
	   PARAMETER (CONNECT_SUPER = 3)
	   PARAMETER (UPDSTS = 4)
C
	REAL*8      MSC_COMMAND(MSC_CMD_LEN,MSC_NUM_CMDS)
	CHARACTER*8 CMSC_COMMAND(MSC_CMD_LEN,MSC_NUM_CMDS)
	EQUIVALENCE (MSC_COMMAND,CMSC_COMMAND)
	DATA MSC_COMMAND/
     *       'CONNECT ','PORT ','?','TO ','PORT ','?',
     *       'CONNECT ','GROUP ','?','TO ','GROUP ','?',
     *       'CONNECT ','SUPER ','?','TO ','SUPER ','?'/
C
C DEFINE LOCATION OF DYNAMIC PARAMETERS WITHIN COMMAND STRINGS
C    0 = NO PARAMETER
C
	INTEGER*4 MSC_PARM_INDEX(MSC_MAX_PARMS,MSC_NUM_CMDS)
	COMMON /MSC_PARM_INDEX/ MSC_PARM_INDEX
	DATA      MSC_PARM_INDEX/3,6,3*0,
     *                           3,6,3*0,
     *                           3,6,3*0/
